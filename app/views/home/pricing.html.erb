    <div class="pricing-footer">
      <div style="display: flex; flex-direction: column; align-items: center; gap: 1rem;">
        <% unless user_signed_in? %>
          <div style="display: flex; flex-direction: column; align-items: center; gap: 0.5rem;">
            <span style="font-size: 10px; font-weight: 900; text-transform: uppercase; color: rgba(255,255,255,0.3); letter-spacing: 0.2em;"><%= t('modal.already_pro') %></span>
            <%= link_to new_user_session_path, style: "font-size: 12px; font-weight: 900; color: white; text-decoration: none; text-transform: uppercase; letter-spacing: -0.02em; display: flex; align-items: center; gap: 6px; transition: color 0.3s;" do %>
              <%= t('modal.login_profile') %>
              <svg style="width:12px;height:12px;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M17 8l4 4m0 0l-4 4m4-4H3" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <% end %>
          </div>
        <% end %>
        <p class="pricing-footer-text">TalkInvoice &copy; <%= Date.today.year %></p>
      </div>
    </div>
