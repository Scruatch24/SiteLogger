<style>
  /* ============================================ */
  /* PRICING PAGE — Onboarding-Inspired Dark UI   */
  /* ============================================ */
  .pricing-page {
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: #0a0a0a;
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
  }

  /* Animated Background */
  .pricing-bg {
    position: fixed;
    inset: 0;
    background: radial-gradient(ellipse at 30% 20%, rgba(249,115,22,0.08) 0%, transparent 60%),
                radial-gradient(ellipse at 70% 80%, rgba(99,102,241,0.06) 0%, transparent 60%);
    pointer-events: none;
    z-index: 0;
  }

  .pricing-grid {
    position: fixed;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    pointer-events: none;
    z-index: 0;
  }

  /* Floating Particles */
  .pricing-particle {
    position: fixed;
    background: rgba(249,115,22,0.4);
    border-radius: 50%;
    pointer-events: none;
    z-index: 0;
    animation: pricingFloat linear infinite;
  }
  @keyframes pricingFloat {
    0%   { transform: translateY(0) scale(1); opacity: 0; }
    10%  { opacity: 1; }
    90%  { opacity: 1; }
    100% { transform: translateY(-100vh) scale(0.5); opacity: 0; }
  }

  /* Content Container */
  .pricing-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;
  }

  /* Header */
  .pricing-header {
    text-align: center;
    padding: 2rem 0 3rem;
  }
  .pricing-headline {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 900;
    color: white;
    text-transform: uppercase;
    letter-spacing: -0.03em;
    line-height: 1.05;
    margin-bottom: 1rem;
  }
  .pricing-headline .onb-accent {
    color: #f97316;
  }
  .pricing-sub {
    font-size: 14px;
    color: rgba(255,255,255,0.4);
    font-weight: 500;
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Plan Cards Grid */
  .pricing-plans {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }
  @media (max-width: 640px) {
    .pricing-plans {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
  }

  /* Plan Card Base */
  .plan-card {
    position: relative;
    border-radius: 32px;
    padding: 2rem 1.5rem;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    transition: transform 0.3s ease;
  }
  .plan-card:hover { transform: translateY(-4px); }

  /* FREE Card */
  .plan-free {
    background: white;
    border: 2px solid white;
    box-shadow: 0 20px 40px rgba(255,255,255,0.05);
  }

  /* PRO Card */
  .plan-pro {
    background: rgba(0,0,0,0.4);
    border: 2px solid #f97316;
    box-shadow: 0 0 30px rgba(249,115,22,0.2);
    backdrop-filter: blur(8px);
  }
  .plan-pro::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(249,115,22,0.1) 0%, transparent 50%);
    pointer-events: none;
    border-radius: 30px;
  }

  /* Plan Header */
  .plan-label {
    font-size: 10px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: 4px;
  }
  .plan-free .plan-label { color: #f97316; }
  .plan-pro .plan-label { color: #f97316; }

  .plan-title {
    font-size: 1.75rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
  }
  .plan-free .plan-title { color: black; }
  .plan-pro .plan-title { color: white; }

  /* Feature Row */
  .feature-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    border-radius: 1rem;
    margin-bottom: 0.5rem;
  }
  .plan-free .feature-row {
    background: #fff7ed;
    border: 1px solid #fed7aa;
  }
  .plan-pro .feature-row {
    background: rgba(249,115,22,0.05);
    border: 1px solid rgba(249,115,22,0.1);
  }

  .feature-left {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  .feature-icon {
    width: 32px;
    height: 32px;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  .plan-free .feature-icon {
    background: #f97316;
    color: white;
    box-shadow: 0 4px 8px rgba(249,115,22,0.2);
  }
  .plan-pro .feature-icon {
    background: rgba(249,115,22,0.2);
    border: 1px solid rgba(249,115,22,0.3);
    color: #f97316;
  }
  .feature-icon svg {
    width: 16px;
    height: 16px;
  }

  .feature-name {
    font-size: 11px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  .plan-free .feature-name { color: #ea580c; }
  .plan-pro .feature-name { color: #f97316; }

  .feature-value {
    font-size: 13px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }
  .plan-free .feature-value { color: black; }
  .plan-pro .feature-value { color: #fef3c7; }
  .feature-value.unlimited { color: #4ade80 !important; }
  .feature-value.locked { color: #ef4444 !important; font-size: 16px; }
  .feature-value.check { color: #4ade80 !important; font-size: 16px; }

  /* Plan CTA */
  .plan-cta {
    margin-top: 1.5rem;
    display: block;
    width: 100%;
    padding: 1rem;
    border-radius: 1rem;
    font-size: 10px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-align: center;
    transition: all 0.3s ease;
    text-decoration: none;
    cursor: pointer;
    border: none;
  }
  .plan-cta-free {
    background: black;
    color: white;
  }
  .plan-cta-free:hover {
    background: #ea580c;
    transform: scale(1.02);
  }
  .plan-cta-current {
    background: rgba(249,115,22,0.1);
    color: #f97316;
    border: 2px solid rgba(249,115,22,0.2);
    cursor: default;
  }
  .plan-cta-pro {
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    color: rgba(255,255,255,0.4);
    cursor: not-allowed;
  }

  /* Elite Badge */
  .elite-badge {
    background: #f97316;
    color: white;
    font-size: 8px;
    font-weight: 900;
    padding: 2px 8px;
    border-radius: 9999px;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  /* Back Link */
  .pricing-back {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: rgba(255,255,255,0.3);
    font-size: 10px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    text-decoration: none;
    padding: 12px 24px;
    border-radius: 14px;
    background: rgba(255,255,255,0.04);
    border: 1px solid rgba(255,255,255,0.06);
    transition: all 0.3s ease;
  }
  .pricing-back:hover {
    color: white;
    background: rgba(249,115,22,0.1);
    border-color: rgba(249,115,22,0.2);
  }
  .pricing-back svg {
    width: 14px;
    height: 14px;
  }

  /* Footer */
  .pricing-footer {
    text-align: center;
    padding: 2rem 0;
    border-top: 1px solid rgba(255,255,255,0.06);
  }
  .pricing-footer-text {
    font-size: 11px;
    color: rgba(255,255,255,0.2);
    font-weight: 500;
  }
</style>

