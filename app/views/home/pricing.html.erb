        <!-- CTA -->
        <div data-section="pricing">
          <% if user_signed_in? && current_user.profile&.paid? %>
            <div class="plan-cta" style="background: rgba(249,115,22,0.1); color: #f97316; border: 2px solid rgba(249,115,22,0.2); display: flex; align-items: center; justify-content: center; gap: 6px; cursor: default;">
