<div class="flex items-center gap-3 pt-2">
  <!-- Plus Button with Dropup -->
  <div class="relative">
    <button type="button" id="addMenuBtn" data-nosnippet onclick="toggleAddMenu(this)" class="w-12 h-12 border-2 border-black rounded-xl text-3xl font-black text-black hover:bg-gray-50 transition-all flex items-center justify-center add-menu-btn active:scale-95 shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] active:shadow-none active:translate-x-[2px] active:translate-y-[2px]">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" />
      </svg>
    </button>
    <div id="addMenuDropup" data-nosnippet class="hidden absolute bottom-full left-0 mb-2 bg-white border-2 border-black rounded-xl overflow-hidden min-w-[200px]">
      <button type="button" id="addLaborBtn" onclick="if(!this.disabled){addLaborSection(); updateAddMenuButtons();}" class="w-full px-4 py-3 text-left text-[10px] font-black uppercase tracking-widest transition-all border-b border-gray-200 md:hover:bg-orange-50 md:hover:text-orange-600 active:scale-95 active:pl-5 active:bg-orange-600 active:text-white">
        <%= t('add_labor') %>
      </button>
      <button type="button" id="addMaterialBtn" onclick="if(!this.disabled){addMaterialSection(); updateAddMenuButtons();}" class="w-full px-4 py-3 text-left text-[10px] font-black uppercase tracking-widest transition-all border-b border-gray-200 md:hover:bg-orange-50 md:hover:text-orange-600 active:scale-95 active:pl-5 active:bg-orange-600 active:text-white">
        <%= t('add_material') %>
      </button>
      <button type="button" id="addExpenseBtn" onclick="if(!this.disabled){addExpenseSection(); updateAddMenuButtons();}" class="w-full px-4 py-3 text-left text-[10px] font-black uppercase tracking-widest transition-all border-b border-gray-200 md:hover:bg-red-50 md:hover:text-red-600 active:scale-95 active:pl-5 active:bg-orange-600 active:text-white">
        <%= t('add_expense') %>
      </button>
      <button type="button" id="addFeeBtn" onclick="if(!this.disabled){addFeeSection(); updateAddMenuButtons();}" class="w-full px-4 py-3 text-left text-[10px] font-black uppercase tracking-widest transition-all border-b border-gray-200 md:hover:bg-blue-50 md:hover:text-blue-500 active:scale-95 active:pl-5 active:bg-orange-600 active:text-white">
        <%= t('add_fee') %>
      </button>
      <button type="button" id="addCreditBtn" onclick="if(!this.disabled){addCreditSection(); updateAddMenuButtons();}" class="w-full px-4 py-3 text-left text-[10px] font-black uppercase tracking-widest transition-all md:hover:bg-red-50 md:hover:text-red-600 active:scale-95 active:pl-5 active:bg-orange-600 active:text-white">
        <%= t('add_credit') %>
      </button>
    </div>
  </div>
  
  <!-- Confirm Log Button (Centered/Expanded) -->
  <button id="saveButton" data-nosnippet type="button" onclick="setupSaveButton()" class="flex-1 h-12 bg-orange-600 hover:bg-orange-700 text-white border-2 border-black font-black rounded-xl uppercase text-[10px] tracking-widest transition-all active:scale-[0.98] flex items-center justify-center shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] active:shadow-none active:translate-x-[2px] active:translate-y-[2px]">
    <%= t('create_pdf') %>
  </button>
</div>
