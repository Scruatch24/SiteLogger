<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.2.3/css/flag-icons.min.css" />

<div class="min-h-screen bg-white text-black font-sans p-4 pb-24 md:pb-4">
  <header class="sticky top-0 z-40 bg-white border-b-2 border-black md:border-b-0 md:static md:bg-transparent -mx-4 px-4 py-3 mb-2 md:mb-10 md:pt-4 md:px-1 flex items-center justify-between shadow-sm md:shadow-none">
    <div class="flex items-center gap-3 md:gap-4 min-w-0">
      <%= link_to root_path, class: "p-1.5 md:p-2 bg-white border-2 border-black rounded-xl text-black transition-all active:scale-95 shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] shrink-0" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <h1 class="text-xl md:text-2xl font-black tracking-tighter text-black uppercase italic truncate pr-2">Settings</h1>
    </div>
    
    <%# Mobile Save Icon %>
    <button type="button" onclick="document.getElementById('settingsForm').requestSubmit()" class="md:hidden p-2 bg-orange-600 text-white border-2 border-black rounded-xl shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] active:shadow-none active:translate-x-[1px] active:translate-y-[1px] transition-all">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 21H5a2 2 0 01-2-2V5a2 2 0 012-2h11l5 5v11a2 2 0 01-2 2z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 21v-8H7v8M9 3v5h6V3M10 18h4" />
      </svg>
    </button>
  </header>

  <%# AJAX Save Toast - Moved out of header and updated style %>
  <div id="saveToast" class="fixed top-12 left-0 right-0 z-[10000] hidden flex justify-center pointer-events-none">
    <div class="bg-green-600 text-white px-8 py-4 rounded-full font-black text-sm uppercase tracking-[0.2em] shadow-[8px_8px_0px_0px_#000000] flex items-center gap-3 border-2 border-black animate-in fade-in zoom-in duration-300">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
      </svg>
      <span>Changes Saved!</span>
    </div>
  </div>

  <% if @profile.errors.any? %>
    <div class="max-w-md mx-auto mb-6 p-4 border-2 border-black bg-red-50 rounded-xl shadow-[4px_4px_0px_0px_#000]">
      <h2 class="text-[10px] font-black uppercase text-red-600 mb-2">Errors:</h2>
      <ul class="list-disc ml-4 text-xs font-bold text-red-600">
        <% @profile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @profile, url: save_settings_path, id: "settingsForm", local: false, class: "max-w-md mx-auto space-y-8" do |f| %>
    <div class="space-y-6">



      <%# Invoice Design Selection - REMOVED DOTTED BORDER %>
      <div class="space-y-4 pt-0">
        <label class="text-[10px] font-black text-black uppercase tracking-widest ml-1">Invoice Design</label>
        <%= f.hidden_field :invoice_style, id: "invoice_style_input", value: @profile.invoice_style.presence || "professional" %>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-3">
            <% ["professional", "modern", "classic", "bold", "minimal"].each do |style| %>
              <% is_active = (@profile.invoice_style.presence || "professional") == style %>
              <div onclick="selectInvoiceStyle('<%= style %>')" id="style_btn_<%= style %>" 
                   class="invoice-style-btn cursor-pointer border-2 border-black rounded-xl p-4 flex items-center justify-between transition-all <%= is_active ? 'bg-orange-600 text-white translate-x-[2px] translate-y-[2px] shadow-none' : 'bg-white text-black shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:bg-orange-50' %>">
                 <span class="text-xs font-black uppercase tracking-widest"><%= style %></span>
                 <div class="w-4 h-4 rounded-full border-2 border-black flex items-center justify-center bg-white">
                   <div class="w-2 h-2 rounded-full bg-orange-600 <%= is_active ? '' : 'hidden' %> indicator"></div>
                 </div>
              </div>
            <% end %>
          </div>
          
          <div id="pdfPreviewContainer" class="relative group cursor-pointer w-full" onclick="openPdfModal()">
             <%# Border Wrapper %>
             <div class="relative w-full aspect-[1/1.41] rounded-2xl border-2 border-black overflow-hidden bg-gray-50 shadow-[4px_4px_0px_0px_rgba(0,0,0,0.1)]">
               <div id="previewLoading" class="absolute inset-0 z-10 bg-white/80 flex items-center justify-center hidden">
                 <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-orange-600"></div>
               </div>
               
               <%# Loupe overlay %>
               <div class="absolute inset-0 z-20 bg-black/30 opacity-0 group-hover:opacity-100 transition-opacity duration-200 flex items-center justify-center pointer-events-none md:flex hidden">
                 <div class="bg-white/90 rounded-full p-3 shadow-lg">
                   <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                     <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
                   </svg>
                 </div>
               </div>

               <iframe id="pdfPreviewFrame" data-src="<%= preview_pdf_logs_path(style: @profile.invoice_style.presence || "professional") %>#toolbar=0&view=FitH" src="about:blank" scrolling="no" class="w-full h-full border-none pointer-events-none scale-[1.02] transform-origin-center" onload="document.getElementById('previewLoading').classList.add('hidden')"></iframe>
             </div>
          </div>
        </div>
      </div>

        <%# PDF Modal Lightbox %>
        <div id="pdfModal" class="fixed inset-0 z-[9999] hidden items-center justify-center p-4 md:p-8" onclick="closePdfModal(event)">
          <%# Blur backdrop - Force full coverage %>
          <div class="fixed top-0 left-0 w-screen h-screen bg-black/60 backdrop-blur-sm z-[-1]"></div>
          
          <%# Modal Content - Removed background and forced block iframe to eliminate gaps %>
          <div class="relative z-10 w-auto h-[90vh] aspect-[1/1.41]">
             <%# Close Button - Moved Outside %>
             <button type="button" onclick="closePdfModal()" class="absolute -top-4 -right-4 z-50 bg-white hover:bg-orange-100 rounded-full p-2 border-2 border-black shadow-lg transition-transform hover:scale-110 active:scale-95">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                 <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
               </svg>
             </button>

             <%# PDF Container %>
             <div class="w-full h-full rounded-2xl shadow-2xl overflow-hidden border-2 border-black bg-white relative" onclick="event.stopPropagation()">
               <div id="modalLoading" class="absolute inset-0 z-20 bg-white flex items-center justify-center">
                 <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-orange-600"></div>
               </div>
               <iframe id="pdfModalFrame" src="about:blank" scrolling="no" class="w-full h-full border-none block bg-transparent scale-[1.02] transform-origin-center relative z-10" onload="document.getElementById('modalLoading').classList.add('hidden')"></iframe>
             </div>
          </div>
        </div>

      <%# Currency Dropdown %>
      <div class="space-y-2">
        <label class="text-[10px] font-black text-black uppercase tracking-widest ml-1">Default Currency</label>
        <div class="relative">
          <%= f.hidden_field :currency, id: "currency_hidden_field", value: @profile.currency.presence || "USD" %>
          
          <button type="button" id="currencySelectBtn" class="w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black text-left flex justify-between items-center shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] focus:outline-none transition-all active:translate-x-[2px] active:translate-y-[2px] active:shadow-none z-10">
            <% current_currency = currencies_data.find { |c| c[:c] == (@profile.currency.presence || "USD") } || currencies_data.first %>
            <span id="selectedCurrencyDisplay" class="flex items-center gap-2">
              <span class="fi fi-<%= current_currency[:i] %> rounded-sm shadow-sm"></span> 
              <span class="ml-1"><%= current_currency[:c] %> (<%= current_currency[:s] %>)</span>
            </span>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M19 9l-7 7-7-7" stroke-width="3" stroke="black"/></svg>
          </button>
          
          <div id="currencyMenu" class="hidden absolute z-50 mt-2 w-full bg-white border-2 border-black rounded-xl shadow-2xl max-h-80 overflow-y-auto">
            <div class="p-2 sticky top-0 bg-white border-b-2 border-black z-20">
              <input type="text" id="currencySearch" placeholder="Search country or code..." class="w-full px-3 py-3 text-sm border-2 border-black rounded-lg outline-none focus:border-orange-500 bg-white">
            </div>
            <div id="currencyList" class="relative z-10"></div>
          </div>
        </div>
        <p class="text-[9px] font-bold text-gray-400 ml-1">Unless Mentioned Otherwise</p>
      </div>

      <%# Billing Model Selection %>
      <div class="space-y-2">
        <label class="text-[10px] font-black text-black uppercase tracking-widest ml-1">Default Billing Model</label>
        <div class="flex gap-2 h-12">
          <%= f.label :billing_mode_hourly, class: "flex-1 cursor-pointer h-full" do %>
            <%= f.radio_button :billing_mode, "hourly", class: "peer hidden", checked: @profile.billing_mode != "fixed" %>
            <div class="h-full border-2 border-black rounded-xl flex items-center justify-center text-[10px] font-black uppercase tracking-widest transition-all peer-checked:bg-orange-600 peer-checked:text-white peer-checked:shadow-none peer-checked:translate-x-[2px] peer-checked:translate-y-[2px] bg-white text-black shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:bg-orange-50">
              Hourly Rate
            </div>
          <% end %>
          <%= f.label :billing_mode_fixed, class: "flex-1 cursor-pointer h-full" do %>
            <%= f.radio_button :billing_mode, "fixed", class: "peer hidden", checked: @profile.billing_mode == "fixed" %>
            <div class="h-full border-2 border-black rounded-xl flex items-center justify-center text-[10px] font-black uppercase tracking-widest transition-all peer-checked:bg-orange-600 peer-checked:text-white peer-checked:shadow-none peer-checked:translate-x-[2px] peer-checked:translate-y-[2px] bg-white text-black shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:bg-orange-50">
              Fixed Price
            </div>
          <% end %>
        </div>
        <p class="text-[9px] font-bold text-gray-400 ml-1">Unless Mentioned Otherwise</p>
      </div>


      


      <div class="space-y-2">
        <label id="rateLabel" class="text-[10px] font-black text-black uppercase tracking-widest ml-1">
          <% current_symbol = current_currency[:s] %>
          <%= @profile.billing_mode == "fixed" ? "Default Price (#{current_symbol})" : "Rate (#{current_symbol}/hr)" %>
        </label>
        <%= f.number_field :hourly_rate, step: 0.01, class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black focus:border-orange-500 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)]" %>
        <p class="text-[9px] font-bold text-gray-400 ml-1">Unless Mentioned Otherwise</p>
      </div>

      <div class="space-y-2">
        <label class="text-[10px] font-black text-black uppercase tracking-widest ml-1">Default Tax Scope</label>

        <%# Hidden field to store actual value %>
        <%= f.hidden_field :tax_scope, id: "tax_scope_hidden" %>

        <div class="space-y-3">
          <%# Row 1: All 4 category toggles on one line %>
          <div class="flex gap-2 h-12">
            <button type="button" data-scope="labor" onclick="toggleScopeToken(this)" class="flex-1 flex items-center justify-center text-[10px] font-black uppercase tracking-widest transition-all border-2 border-black rounded-xl scope-toggle bg-white shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:bg-orange-50">
              Labor
            </button>
            <button type="button" data-scope="materials_only" onclick="toggleScopeToken(this)" class="flex-1 flex items-center justify-center text-[10px] font-black uppercase tracking-widest transition-all border-2 border-black rounded-xl scope-toggle bg-white shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:bg-orange-50">
              Materials
            </button>
            <button type="button" data-scope="fees_only" onclick="toggleScopeToken(this)" class="flex-1 flex items-center justify-center text-[10px] font-black uppercase tracking-widest transition-all border-2 border-black rounded-xl scope-toggle bg-white shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:bg-orange-50">
              Fees
            </button>
            <button type="button" data-scope="expenses_only" onclick="toggleScopeToken(this)" class="flex-1 flex items-center justify-center text-[10px] font-black uppercase tracking-widest transition-all border-2 border-black rounded-xl scope-toggle bg-white shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:bg-orange-50">
              Expenses
            </button>
          </div>

          <%# Row 3: The Helpers (All/None) %>
          <div class="flex gap-2 h-12">
            <button type="button" id="scope_all_btn" onclick="setScopeAll()" class="flex-1 flex items-center justify-center text-[10px] font-black uppercase tracking-widest transition-all border-2 border-black rounded-xl bg-white shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:bg-orange-50">
              All
            </button>
            <button type="button" id="scope_none_btn" onclick="setScopeNone()" class="flex-1 flex items-center justify-center text-[10px] font-black uppercase tracking-widest transition-all border-2 border-black rounded-xl bg-white shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:bg-orange-50">
              None
            </button>
          </div>
        </div>
        <p class="text-[9px] font-bold text-gray-400 ml-1">Unless Mentioned Otherwise</p>
      </div>

      <div class="space-y-2">
        <label class="text-[10px] font-black text-black uppercase tracking-widest ml-1">Default Tax Rate (%)</label>
        <%= f.number_field :tax_rate, step: 0.1, class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black focus:border-orange-500 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)]" %>
        <p class="text-[9px] font-bold text-gray-400 ml-1">Unless Mentioned Otherwise</p>
      </div>




    </div>

    <button type="submit" id="saveSettingsBtn" class="hidden md:flex w-full bg-orange-600 text-white border-2 border-black font-black py-4 rounded-xl shadow-[4px_4px_0px_0px_#000000] active:scale-[0.97] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all uppercase text-xs tracking-[0.2em] items-center justify-center gap-3 save-btn-hover">
      <span id="btnText">Save Settings</span>
      <div id="btnSpinner" class="hidden">
        <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
    </button>
  <% end %>
</div>

