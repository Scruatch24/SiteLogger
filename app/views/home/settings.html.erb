<% is_guest = @profile.guest? && !user_signed_in? %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>
<script>
  (function() {
    const lib = window['pdfjs-dist/build/pdf'] || window.pdfjsLib;
    if (lib) {
      window.pdfjsLib = lib;
      window.pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';
    }
  })();
</script>

<div class="min-h-screen bg-white text-black font-sans p-4 pb-24 md:pb-4">
  <header class="sticky top-0 z-40 bg-white border-b-2 border-black md:border-b-0 md:static md:bg-transparent -mx-4 px-4 py-3 mb-2 md:mb-10 md:pt-4 md:px-1 flex items-center justify-between shadow-sm md:shadow-none">
    <div class="flex items-center gap-3 md:gap-4 min-w-0">
      <%= link_to root_path, class: "p-1.5 md:p-2 bg-white border-2 border-black rounded-xl text-black transition-all active:scale-95 shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] shrink-0" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <h1 class="text-xl md:text-2xl font-black tracking-tighter text-black uppercase italic truncate pr-2">Settings</h1>
    </div>
    
    <%# Mobile Save Icon %>
    <button type="button" id="mobileSaveBtn" onclick="<%= @profile.guest? ? '' : "document.getElementById('settingsForm').requestSubmit()" %>" class="<%= @profile.guest? ? 'opacity-20 pointer-events-none' : '' %> md:hidden flex items-center gap-2 px-3 py-2 bg-orange-600 text-white border-2 border-black rounded-xl shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] active:shadow-none active:translate-x-[1px] active:translate-y-[1px] transition-all">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 21H5a2 2 0 01-2-2V5a2 2 0 012-2h11l5 5v11a2 2 0 01-2 2z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 21v-8H7v8M9 3v5h6V3M10 18h4" />
      </svg>
      <span class="text-[10px] font-black uppercase tracking-widest">Save Changes</span>
    </button>
  </header>

  <%# AJAX Save Toast - Moved out of header and updated style %>
  <div id="saveToast" class="fixed top-12 left-0 right-0 z-[10000] hidden flex justify-center pointer-events-none">
    <div class="bg-green-600 text-white px-8 py-4 rounded-full font-black text-sm uppercase tracking-[0.2em] shadow-[8px_8px_0px_0px_#000000] flex items-center gap-3 border-2 border-black animate-in fade-in zoom-in duration-300">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
      </svg>
      <span>Changes Saved!</span>
    </div>
  </div>

  <% if @profile.errors.any? %>
    <div class="max-w-md mx-auto mb-6 p-4 border-2 border-black bg-red-50 rounded-xl shadow-[4px_4px_0px_0px_#000]">
      <h2 class="text-[10px] font-black uppercase text-red-600 mb-2">Errors:</h2>
      <ul class="list-disc ml-4 text-xs font-bold text-red-600">
        <% @profile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @profile.guest? && !user_signed_in? %>
    <!-- Guest: Modal-style Settings Benefits Banner -->
    <div class="px-0 mb-8 max-w-md mx-auto">
      <div class="relative zenith-container rounded-[32px]">
        <div class="zenith-bg"></div>
        <div class="zenith-grid"></div>
        <div class="zenith-trace">
          <svg preserveAspectRatio="none">
            <rect x="0" y="0" width="100%" height="100%" rx="32" ry="32" />
          </svg>
        </div>
        <div class="zenith-content p-6 md:p-8">
          <!-- Header: Centered & Title-like -->
          <div class="flex flex-col items-center justify-center gap-2 mb-8 text-center">
            <div class="w-12 h-12 rounded-2xl bg-orange-600/20 border border-orange-500/30 flex items-center justify-center mb-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <h3 class="text-2xl font-black italic tracking-tighter uppercase leading-none text-white">Free Account</h3>
            <p class="text-[10px] font-black uppercase tracking-[0.2em] text-orange-500/80">Invoice Customization</p>
          </div>
          
          <!-- Benefits Grid: 2x2 for clean layout -->
          <div class="grid grid-cols-2 gap-3 mb-6">
            <!-- Benefit 1: Design -->
            <div class="bg-white/5 border border-white/10 rounded-2xl p-3 flex flex-col items-center text-center gap-2">
              <div class="w-8 h-8 rounded-lg bg-orange-600/20 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
                </svg>
              </div>
              <span class="text-[9px] font-black text-white uppercase tracking-widest leading-tight">Pro Layouts</span>
            </div>
            <!-- Benefit 2: Colors -->
            <div class="bg-white/5 border border-white/10 rounded-2xl p-3 flex flex-col items-center text-center gap-2">
              <div class="w-8 h-8 rounded-lg bg-orange-600/20 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.828 2.828a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                </svg>
              </div>
              <span class="text-[9px] font-black text-white uppercase tracking-widest leading-tight">Brand Colors</span>
            </div>
            <!-- Benefit 3: Currency -->
            <div class="bg-white/5 border border-white/10 rounded-2xl p-3 flex flex-col items-center text-center gap-2">
              <div class="w-8 h-8 rounded-lg bg-orange-600/20 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="text-[9px] font-black text-white uppercase tracking-widest leading-tight">Base Currency</span>
            </div>
            <!-- Benefit 4: Tax Rules -->
            <div class="bg-white/5 border border-white/10 rounded-2xl p-3 flex flex-col items-center text-center gap-2">
              <div class="w-8 h-8 rounded-lg bg-orange-600/20 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </div>
              <span class="text-[9px] font-black text-white uppercase tracking-widest leading-tight">Tax Scopes</span>
            </div>
          </div>

          <!-- Action Button -->
          <button onclick="window.showPremiumModal?.()" class="w-full py-4 bg-orange-600 hover:bg-orange-500 text-white rounded-2xl font-black uppercase text-xs tracking-[0.2em] shadow-[0_4px_20px_rgba(234,88,12,0.4)] transition-all flex items-center justify-center gap-2 group">
            SIGN UP FREE
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% end %>

  <%= form_with model: @profile, url: save_settings_path, id: "settingsForm", local: false, class: "max-w-md mx-auto space-y-8 #{is_guest ? 'opacity-40 grayscale pointer-events-none select-none' : ''}" do |f| %>
    <div class="space-y-6">



      <%# Invoice Design Selection - REMOVED DOTTED BORDER %>
      <div class="space-y-4 pt-0">
        <label class="text-[10px] font-black text-black uppercase tracking-widest ml-1">Invoice Design</label>
        <%= f.hidden_field :invoice_style, id: "invoice_style_input", value: @profile.invoice_style.presence || "classic" %>
        <%= f.hidden_field :accent_color, id: "accent_color_input", value: @profile.accent_color.presence || "#F97316" %>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:items-center">
          <div class="space-y-3">
            <% ["classic", "professional", "modern", "bold", "minimal"].each do |style| %>
              <% is_active = (@profile.invoice_style.presence || "classic") == style %>
              <div onclick="<%= @profile.guest? ? '' : "selectInvoiceStyle('#{style}')" %>" id="style_btn_<%= style %>" 
                   class="invoice-style-btn border-2 border-black rounded-xl p-4 flex items-center justify-between transition-all <%= is_active ? 'bg-orange-600 text-white translate-x-[2px] translate-y-[2px] shadow-none' : 'bg-white text-black shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:bg-orange-50' %> <%= 'opacity-50 cursor-not-allowed pointer-events-none' if @profile.guest? %>">
                 <span class="text-xs font-black uppercase tracking-widest"><%= style %></span>
                 <div class="w-4 h-4 rounded-full border-2 border-black flex items-center justify-center bg-white">
                   <div class="w-2 h-2 rounded-full bg-orange-600 <%= is_active ? '' : 'hidden' %> indicator"></div>
                 </div>
              </div>
            <% end %>
          </div>


          
          <div class="space-y-3">
            <%# Color Picker for Classic Style - Compact Version %>
            <div id="classicColorPicker" class="<%= (@profile.invoice_style.presence || 'classic') == 'classic' ? '' : 'hidden' %> flex items-center justify-center px-1">
              <div class="flex gap-2.5">
                <% [ 
                    ['Orange', '#F97316'], ['Red', '#EF4444'], ['Blue', '#3B82F6'], 
                    ['Green', '#10B981'], ['Purple', '#8B5CF6']
                   ].each do |name, hex| %>
                  <% is_active = (@profile.accent_color.presence || '#F97316').upcase == hex.upcase %>
                  <button type="button" onclick="selectAccentColor('<%= hex %>')" 
                          class="color-swatch w-6 h-6 rounded-full border-2 border-black transition-all hover:scale-110 active:scale-90 shadow-sm <%= is_active ? 'ring-2 ring-offset-1 ring-black scale-110 z-10' : '' %>"
                          style="background-color: <%= hex %>;"
                          data-color="<%= hex %>"
                          title="<%= name %>">
                  </button>
                <% end %>
              </div>
            </div>

            <div id="pdfPreviewContainer" class="relative group md:cursor-pointer cursor-default w-full pointer-events-none <%= is_guest ? '' : 'md:pointer-events-auto' %>" onclick="<%= is_guest ? '' : 'openPdfModal()' %>">
             <%# Border Wrapper %>
             <div class="relative w-full aspect-[1/1.41] rounded-2xl border-2 border-black overflow-hidden bg-gray-50 shadow-[4px_4px_0px_0px_rgba(0,0,0,0.1)]">
               <div id="previewLoading" class="absolute inset-0 z-10 bg-white/80 flex items-center justify-center hidden">
                 <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-orange-600"></div>
               </div>
               
               <%# Loupe overlay %>
               <div class="absolute inset-0 z-20 bg-black/30 opacity-0 group-hover:opacity-100 transition-opacity duration-200 flex items-center justify-center pointer-events-none md:flex hidden">
                 <div class="bg-white/90 rounded-full p-3 shadow-lg">
                   <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                     <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
                   </svg>
                 </div>
               </div>

               <object id="pdfPreviewObject" data="about:blank" type="application/pdf" class="hidden w-full h-full border-none pointer-events-none" style="-webkit-user-select: none; user-select: none; -webkit-touch-callout: none;"></object>
               
               <!-- Desktop Iframe -->
               <iframe id="pdfPreviewFrame" src="<%= preview_pdf_logs_path(style: (@profile.invoice_style.presence || "classic"), accent_color: (@profile.accent_color.presence || "#F97316"), t: Time.now.to_i) %>#toolbar=0&view=Fit" scrolling="no" class="hidden md:block w-full h-full border-none pointer-events-none" style="-webkit-user-select: none; user-select: none; -webkit-touch-callout: none;" onload="document.getElementById('previewLoading').classList.add('hidden')"></iframe>
               
               <!-- Mobile Canvas (PDF.js) -->
               <canvas id="mobilePdfCanvas" class="md:hidden w-full h-full object-contain pointer-events-none"></canvas>
             </div>
             <div class="mt-2 flex justify-center">
                <span class="inline-block px-1.5 py-0.5 bg-gray-50 text-gray-400 text-[8px] font-black uppercase tracking-widest rounded-md border border-gray-200">Based on your profile information</span>
              </div>
          </div>
        </div>
      </div>
    </div>

        <%# PDF Modal Lightbox %>
        <div id="pdfModal" class="fixed inset-0 z-[9999] hidden items-center justify-center p-4 md:p-8" onclick="closePdfModal(event)">
          <%# Blur backdrop - Force full coverage %>
          <div class="fixed top-0 left-0 w-screen h-screen bg-black/60 backdrop-blur-sm z-[-1]"></div>
          
          <%# Modal Content - Removed background and forced block iframe to eliminate gaps %>
          <div class="relative z-10 w-auto h-[90vh] aspect-[1/1.41]">
             <%# Close Button - Moved Outside %>
             <button type="button" onclick="closePdfModal()" class="absolute -top-4 -right-4 z-50 bg-white hover:bg-orange-100 rounded-full p-2 border-2 border-black shadow-lg transition-transform hover:scale-110 active:scale-95">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                 <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
               </svg>
             </button>

             <%# PDF Container %>
              <div class="w-full h-full rounded-2xl shadow-2xl overflow-hidden border-2 border-black bg-white relative" onclick="event.stopPropagation()" style="-webkit-user-select: none; user-select: none; -webkit-touch-callout: none;">
                <div id="modalLoading" class="absolute inset-0 z-20 bg-white flex items-center justify-center">
                  <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-orange-600"></div>
                </div>
                <!-- Protective Overlay (Blocks interaction) -->
                <div class="absolute inset-0 z-30 bg-transparent cursor-default" oncontextmenu="return false;"></div>
                <object id="pdfModalObject" data="about:blank" type="application/pdf" class="hidden w-full h-full border-none pointer-events-none"></object>
                <iframe id="pdfModalFrame" src="about:blank" scrolling="no" class="w-full h-full border-none block bg-transparent scale-[1.02] transform-origin-center relative z-10 pointer-events-none" onload="document.getElementById('modalLoading').classList.add('hidden')"></iframe>
              </div>
          </div>
        </div>

      <%# Currency Dropdown %>
      <div class="space-y-2">
        <label class="text-[10px] font-black text-black uppercase tracking-widest ml-1">Default Currency</label>
        <div class="relative">
          <%= f.hidden_field :currency, id: "currency_hidden_field", value: @profile.currency.presence || "USD" %>
          
          <button type="button" id="currencySelectBtn" onclick="toggleCurrencyMenu(event)" class="w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black text-left flex justify-between items-center shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] focus:outline-none transition-all active:translate-x-[2px] active:translate-y-[2px] active:shadow-none z-10 disabled:bg-gray-50 disabled:text-gray-400 disabled:cursor-not-allowed" <%= 'disabled' if @profile.guest? %>>
            <% current_currency = currencies_data.find { |c| c[:c] == (@profile.currency.presence || "USD") } || currencies_data.first %>
            <span id="selectedCurrencyDisplay" class="flex items-center gap-2">
              <span class="fi fi-<%= current_currency[:i] %> rounded-sm shadow-sm"></span> 
              <span class="ml-1"><%= current_currency[:c] %> (<%= current_currency[:s] %>)</span>
            </span>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M19 9l-7 7-7-7" stroke-width="3" stroke="black"/></svg>
          </button>
          
          <div id="currencyMenu" class="hidden absolute z-50 mt-2 w-full bg-white border-2 border-black rounded-xl shadow-2xl max-h-80 overflow-y-auto">
            <div class="p-2 sticky top-0 bg-white border-b-2 border-black z-20">
              <input type="text" id="currencySearch" placeholder="Search country or code..." class="w-full px-3 py-3 text-sm border-2 border-black rounded-lg outline-none focus:border-orange-500 bg-white">
            </div>
            <div id="currencyList" class="relative z-10"></div>
          </div>
        </div>
        <button type="button" onclick="showSettingsInfo('Currency', 'If any currency is mentioned other than this default in your instructions, it will be applied instead. Only 1 currency can be used per invoice.')" class="flex items-center gap-1.5 px-1.5 py-0.5 bg-gray-50 text-gray-400 text-[8px] font-black uppercase tracking-widest rounded-md border border-gray-200 ml-1 mt-1 hover:bg-orange-50 hover:text-orange-600 transition-colors">
          <span>Unless Mentioned Otherwise</span>
          <div class="w-3 h-3 rounded-full bg-gray-200 flex items-center justify-center text-[7px] text-gray-500 font-black">!</div>
        </button>
      </div>

      <%# Billing Model Selection %>
      <div class="space-y-2">
        <label class="text-[10px] font-black text-black uppercase tracking-widest ml-1">Default Billing Model</label>
        <div class="flex gap-2 h-12">
          <%= f.label :billing_mode_hourly, class: "flex-1 h-full cursor-pointer #{@profile.guest? ? 'pointer-events-none' : ''}" do %>
            <%= f.radio_button :billing_mode, "hourly", class: "peer hidden", checked: @profile.billing_mode != "fixed", disabled: @profile.guest?, onchange: "updateRateLabel()" %>
            <div class="h-full border-2 border-black rounded-xl flex items-center justify-center text-[10px] font-black uppercase tracking-widest transition-all peer-checked:bg-orange-600 peer-checked:text-white peer-checked:shadow-none peer-checked:translate-x-[2px] peer-checked:translate-y-[2px] bg-white text-black shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:bg-orange-50 peer-disabled:bg-gray-50 peer-disabled:text-gray-400">
              Hourly Rate
            </div>
          <% end %>
          <%= f.label :billing_mode_fixed, class: "flex-1 h-full cursor-pointer #{@profile.guest? ? 'pointer-events-none' : ''}" do %>
            <%= f.radio_button :billing_mode, "fixed", class: "peer hidden", checked: @profile.billing_mode == "fixed", disabled: @profile.guest?, onchange: "updateRateLabel()" %>
            <div class="h-full border-2 border-black rounded-xl flex items-center justify-center text-[10px] font-black uppercase tracking-widest transition-all peer-checked:bg-orange-600 peer-checked:text-white peer-checked:shadow-none peer-checked:translate-x-[2px] peer-checked:translate-y-[2px] bg-white text-black shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:bg-orange-50 peer-disabled:bg-gray-50 peer-disabled:text-gray-400">
              Fixed Price
            </div>
          <% end %>
        </div>
        <button type="button" onclick="showSettingsInfo('Billing Model', 'This determines the default starting point for labor. An invoice can have mixed billing models for different items; if you explicitly mention a specific mode (Hourly or Fixed) in your prompt, it will be used instead.')" class="flex items-center gap-1.5 px-1.5 py-0.5 bg-gray-50 text-gray-400 text-[8px] font-black uppercase tracking-widest rounded-md border border-gray-200 ml-1 mt-1 hover:bg-orange-50 hover:text-orange-600 transition-colors">
          <span>Unless Mentioned Otherwise</span>
          <div class="w-3 h-3 rounded-full bg-gray-200 flex items-center justify-center text-[7px] text-gray-500 font-black">!</div>
        </button>
      </div>


      


      <div class="space-y-2">
        <label id="rateLabel" class="text-[10px] font-black text-black uppercase tracking-widest ml-1">
          <% current_symbol = current_currency[:s] %>
          <%= @profile.billing_mode == "fixed" ? "Default Price (#{current_symbol})" : "Default Rate (#{current_symbol}/hr)" %>
        </label>
        <%= f.number_field :hourly_rate, step: 0.01, max: 999999999, oninput: "if(this.value > 999999999) this.value = 999999999", class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black focus:border-orange-500 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] disabled:bg-gray-50 disabled:text-gray-400 disabled:cursor-not-allowed", disabled: is_guest %>
        <button type="button" onclick="showSettingsInfo('Default Rate', 'This rate is used automatically for labor. If you mention a different rate or a fixed price in your instructions, it will override this value.')" class="flex items-center gap-1.5 px-1.5 py-0.5 bg-gray-50 text-gray-400 text-[8px] font-black uppercase tracking-widest rounded-md border border-gray-200 ml-1 mt-1 hover:bg-orange-50 hover:text-orange-600 transition-colors">
          <span>Unless Mentioned Otherwise</span>
          <div class="w-3 h-3 rounded-full bg-gray-200 flex items-center justify-center text-[7px] text-gray-500 font-black">!</div>
