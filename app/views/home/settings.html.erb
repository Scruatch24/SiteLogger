<script>
  // --- Global State ---
  const currencies = <%== currencies_data.to_json %>;
  let activeTokens = [];
  let selectedCurrency = currencies[0];
  window.APP_LANGUAGES = {
    en: "<%= t('english') %>",
    ka: "<%= t('georgian') %>",
    default_price: "<%= j t('default_price_with_symbol', symbol: '%{symbol}') %>",
    default_rate: "<%= j t('default_rate_hourly_with_symbol', symbol: '%{symbol}') %>",
    changes_saved_en: "<%= j t('changes_saved', locale: :en) %>",
    changes_saved_ka: "<%= j t('changes_saved', locale: :ka) %>",
  };
  window.previewTimeout = null;

  // --- Global Functions ---
  function autoResize(el) {
    if (!el) return;
    el.style.height = '1px';
    const newHeight = el.scrollHeight;
    const maxHeight = parseInt(window.getComputedStyle(el).maxHeight) || 800;
    
    if (newHeight >= maxHeight) {
      el.style.height = maxHeight + 'px';
      el.style.overflowY = 'auto';
    } else {
      el.style.height = newHeight + 'px';
      el.style.overflowY = 'hidden';
    }
  }

  function previewImage(input) {
    const file = input.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function(e) {
        const preview = document.getElementById('client-preview');
        const existingLogo = document.getElementById('logo-preview');
        const placeholder = document.getElementById('logo-placeholder');
        
        if (existingLogo) existingLogo.classList.add('hidden');
        if (placeholder) placeholder.classList.add('hidden');
        
        preview.src = e.target.result;
        preview.classList.remove('hidden');
      }
      reader.readAsDataURL(file);
    }
  }

  window.toggleScopeToken = function(btn) {
    const hidden = document.getElementById('tax_scope_hidden');
    if (!hidden) return;
    const token = btn.dataset.scope;
    
    if (activeTokens.includes(token)) {
      activeTokens = activeTokens.filter(t => t !== token);
    } else {
      activeTokens.push(token);
    }
    hidden.value = activeTokens.join(',');
    updateScopeUI();
  };

  window.setScopeAll = function() {
    const hidden = document.getElementById('tax_scope_hidden');
    activeTokens = ["labor", "materials_only", "fees_only", "expenses_only"];
    if (hidden) hidden.value = activeTokens.join(',');
    updateScopeUI();
  };

  window.setScopeNone = function() {
    const hidden = document.getElementById('tax_scope_hidden');
    activeTokens = [];
    if (hidden) hidden.value = "";
    updateScopeUI();
  };

  function updateScopeUI() {
    document.querySelectorAll('.scope-toggle').forEach(btn => {
      const token = btn.dataset.scope;
      if (activeTokens.includes(token)) {
        btn.classList.add('bg-orange-600', 'text-white', 'shadow-none', 'translate-x-[2px]', 'translate-y-[2px]');
        btn.classList.remove('bg-white', 'text-black', 'shadow-[3px_3px_0px_0px_rgba(0,0,0,1)]', 'hover:bg-orange-50');
      } else {
        btn.classList.remove('bg-orange-600', 'text-white', 'shadow-none', 'translate-x-[2px]', 'translate-y-[2px]');
        btn.classList.add('bg-white', 'text-black', 'shadow-[3px_3px_0px_0px_rgba(0,0,0,1)]', 'hover:bg-orange-50');
      }
    });

    const scopeAllBtn = document.getElementById('scope_all_btn');
    const scopeNoneBtn = document.getElementById('scope_none_btn');
    
    if (scopeAllBtn) {
      const allActive = activeTokens.length === 4;
      if (allActive) {
        scopeAllBtn.classList.add('bg-orange-600', 'text-white', 'shadow-none', 'translate-x-[2px]', 'translate-y-[2px]');
        scopeAllBtn.classList.remove('bg-white', 'text-black', 'shadow-[3px_3px_0px_0px_rgba(0,0,0,1)]', 'hover:bg-orange-50');
      } else {
        scopeAllBtn.classList.remove('bg-orange-600', 'text-white', 'shadow-none', 'translate-x-[2px]', 'translate-y-[2px]');
        scopeAllBtn.classList.add('bg-white', 'text-black', 'shadow-[3px_3px_0px_0px_rgba(0,0,0,1)]', 'hover:bg-orange-50');
      }
    }
    
    if (scopeNoneBtn) {
      const noneActive = activeTokens.length === 0;
      if (noneActive) {
        scopeNoneBtn.classList.add('bg-orange-600', 'text-white', 'shadow-none', 'translate-x-[2px]', 'translate-y-[2px]');
        scopeNoneBtn.classList.remove('bg-white', 'text-black', 'shadow-[3px_3px_0px_0px_rgba(0,0,0,1)]', 'hover:bg-orange-50');
      } else {
        scopeNoneBtn.classList.remove('bg-orange-600', 'text-white', 'shadow-none', 'translate-x-[2px]', 'translate-y-[2px]');
        scopeNoneBtn.classList.add('bg-white', 'text-black', 'shadow-[3px_3px_0px_0px_rgba(0,0,0,1)]', 'hover:bg-orange-50');
      }
    }
  }

  function updateCurrencyDisplay(currency) {
    const display = document.getElementById('selectedCurrencyDisplay');
    selectedCurrency = currency;
    if (display) {
      display.innerHTML = `<span class="fi fi-${currency.i} rounded-sm shadow-sm"></span> <span class="ml-1">${currency.c} (${currency.s})</span>`;
    }
    updateRateLabel();
  }

  function updateRateLabel() {
    const rateLabel = document.getElementById('rateLabel');
    const fixedRadio = document.getElementById('profile_billing_mode_fixed');
    if (!rateLabel) return;
    const symbol = selectedCurrency.s;
    if (fixedRadio && fixedRadio.checked) {
      rateLabel.innerText = window.APP_LANGUAGES.default_price.replace('%{symbol}', symbol);
    } else {
      rateLabel.innerText = window.APP_LANGUAGES.default_rate.replace('%{symbol}', symbol);
    }
  }

  window.selectInvoiceStyle = function(style) {
    document.getElementById('invoice_style_input').value = style;
    document.querySelectorAll('.invoice-style-btn').forEach(btn => {
      btn.classList.remove('bg-orange-600', 'text-white', 'shadow-none');
      btn.classList.add('bg-white', 'text-black', 'shadow-[3px_3px_0px_0px_rgba(0,0,0,1)]', 'hover:bg-orange-50');
      btn.querySelector('.indicator')?.classList.add('hidden');
    });
    
    const activeBtn = document.getElementById('style_btn_' + style);
    if (activeBtn) {
      activeBtn.classList.remove('bg-white', 'text-black', 'shadow-[3px_3px_0px_0px_rgba(0,0,0,1)]', 'hover:bg-orange-50');
      activeBtn.classList.add('bg-orange-600', 'text-white', 'shadow-none');
      activeBtn.querySelector('.indicator')?.classList.remove('hidden');
    }

    const colorPicker = document.getElementById('classicColorPicker');
    if (colorPicker) colorPicker.classList.toggle('hidden', style !== 'classic');
    refreshPdfPreview();
  };

  window.selectAccentColor = function(color) {
      document.getElementById('accent_color_input').value = color;
      document.querySelectorAll('.color-swatch').forEach(btn => {
         btn.classList.toggle('ring-2', btn.dataset.color === color);
         btn.classList.toggle('scale-110', btn.dataset.color === color);
      });
      refreshPdfPreview();
  };

  function refreshPdfPreview() {
    const styleEl = document.getElementById('invoice_style_input');
    const colorEl = document.getElementById('accent_color_input');
    if (!styleEl || !colorEl) return;

    clearTimeout(window.previewTimeout);
    window.previewTimeout = setTimeout(async () => {
      const iframe = document.getElementById('pdfPreviewFrame');
      const canvas = document.getElementById('mobilePdfCanvas');
      const loading = document.getElementById('previewLoading');
      
      const baseUrl = "/logs/preview_pdf?style=" + styleEl.value + "&accent_color=" + encodeURIComponent(colorEl.value) + "&t=" + new Date().getTime();
      
      loading?.classList.remove('hidden');

      if (window.innerWidth < 768) {
        // Mobile: PDF.js to Canvas
        iframe?.classList.add('hidden');
        canvas?.classList.remove('hidden');
        
        try {
          const loadingTask = pdfjsLib.getDocument(baseUrl);
          const pdf = await loadingTask.promise;
          const page = await pdf.getPage(1);
          
          if (!canvas) return;
          const context = canvas.getContext('2d');
          
          // Get dimensions
          const pixelRatio = window.devicePixelRatio || 1;
          const containerWidth = canvas.clientWidth * pixelRatio;
          const viewport = page.getViewport({ scale: 1 });
          const scale = containerWidth / viewport.width;
          const scaledViewport = page.getViewport({ scale });

          canvas.width = scaledViewport.width;
          canvas.height = scaledViewport.height;
          
          const renderContext = {
            canvasContext: context,
            viewport: scaledViewport
          };
          
          await page.render(renderContext).promise;
          loading?.classList.add('hidden');
          
        } catch (error) {
          console.error("PDF.js Render Error:", error);
          loading?.classList.add('hidden');
        }
        
      } else {
        // Desktop: Iframe
        canvas?.classList.add('hidden');
        iframe?.classList.remove('hidden');
        iframe.src = baseUrl + "#toolbar=0&view=Fit";
      }
    }, 200);
  }

  // --- Event Bindings ---
  function initSettings() {
    const scopeHidden = document.getElementById('tax_scope_hidden');
    if (scopeHidden) {
      activeTokens = scopeHidden.value ? scopeHidden.value.split(',').filter(t => t) : [];
      updateScopeUI();
    }

    const hiddenField = document.getElementById('currency_hidden_field');
    if (hiddenField) {
      const curr = currencies.find(c => c.c === hiddenField.value) || currencies[0];
      updateCurrencyDisplay(curr);
    }

    const sysLangField = document.getElementById('system_language_hidden_field');
    if (sysLangField) {
      updateSystemLanguageDisplay(sysLangField.value);
    }

    const docLangField = document.getElementById('document_language_hidden_field');
    if (docLangField) {
      updateDocumentLanguageDisplay(docLangField.value);
    }

    document.querySelectorAll('textarea[oninput="autoResize(this)"]').forEach(el => autoResize(el));
    
    const iStyle = document.getElementById('invoice_style_input')?.value || 'classic';
    window.selectInvoiceStyle(iStyle);

    renderCurrencyList("");
    
    // Final UI sanity check for labels
    updateRateLabel();

    // Lazy load the iframe after page render to handle Turbo timing
    setTimeout(() => {
        refreshPdfPreview();
    }, 300);
  }

  function renderCurrencyList(filter = "") {
    const list = document.getElementById('currencyList');
    const hiddenField = document.getElementById('currency_hidden_field');
    const menu = document.getElementById('currencyMenu');
    if (!list) return;
    list.innerHTML = "";
    const filtered = currencies.filter(c => 
      c.n.toLowerCase().includes(filter.toLowerCase()) || 
      c.c.toLowerCase().includes(filter.toLowerCase())
    );

    filtered.forEach(c => {
      const div = document.createElement('div');
      div.className = "px-4 py-4 currency-item-hover cursor-pointer flex items-center justify-between border-b border-gray-100 last:border-0 transition-colors";
      div.innerHTML = `<div class="flex items-center gap-3"><span class="fi fi-${c.i} rounded-sm shadow-sm w-5 h-4"></span><span class="text-sm font-bold text-black">${c.n}</span></div><span class="text-xs font-black text-orange-600 bg-orange-50 px-2 py-1 rounded-md border border-orange-100">${c.s}</span>`;
      div.onclick = (e) => {
        e.stopPropagation();
        if (hiddenField) hiddenField.value = c.c;
        updateCurrencyDisplay(c);
        menu?.classList.add('hidden');
      };
      list.appendChild(div);
    });
  }

  document.addEventListener("turbo:load", initSettings);
  
  // Also run on raw DOMContentLoaded as a fallback
  document.addEventListener("DOMContentLoaded", initSettings);
  
  // Force immediate execution if script loads late
  if (document.readyState === "complete" || document.readyState === "interactive") {
    initSettings();
  }
  
  // Toggle Currency Menu
  window.toggleCurrencyMenu = function(e) {
    if (e) e.stopPropagation();
    const menu = document.getElementById('currencyMenu');
    const search = document.getElementById('currencySearch');
    if (!menu) return;
    
    // Close other menus
    document.getElementById('systemLanguageMenu')?.classList.add('hidden');
    document.getElementById('documentLanguageMenu')?.classList.add('hidden');

    menu.classList.toggle('hidden');
    if (!menu.classList.contains('hidden') && search) {
      search.value = "";
      renderCurrencyList("");
      search.focus();
    }
  };

  window.toggleSystemLanguageMenu = function(e) {
    if (e) e.stopPropagation();
    const menu = document.getElementById('systemLanguageMenu');
    if (!menu) return;

    // Close other menus
    document.getElementById('currencyMenu')?.classList.add('hidden');
    document.getElementById('documentLanguageMenu')?.classList.add('hidden');

    menu.classList.toggle('hidden');
  };

  window.toggleDocumentLanguageMenu = function(e) {
    if (e) e.stopPropagation();
    const menu = document.getElementById('documentLanguageMenu');
    if (!menu) return;

    // Close other menus
    document.getElementById('currencyMenu')?.classList.add('hidden');
    document.getElementById('systemLanguageMenu')?.classList.add('hidden');

    menu.classList.toggle('hidden');
  };

  window.selectSystemLanguage = function(code) {
    const hiddenField = document.getElementById('system_language_hidden_field');
    if (hiddenField) hiddenField.value = code;
    updateSystemLanguageDisplay(code);
    document.getElementById('systemLanguageMenu')?.classList.add('hidden');
    
    // Auto-apply for everyone via session
    saveSystemLanguageSession(code);
  };

  async function saveSystemLanguageSession(code) {
    const btn = document.getElementById('systemLanguageSelectBtn');
    const toast = document.getElementById('saveToast');
    const originalContent = btn.innerHTML;
    
    // Determine which "applying" text to use based on the SELECTED language
    const applyingText = code === 'ka' ? "<%= j t('applying', locale: :ka) %>" : "<%= j t('applying', locale: :en) %>";
    
    btn.disabled = true;
    btn.innerHTML = `<div class="flex items-center gap-2"><div class="animate-spin h-4 w-4 border-2 border-black border-t-transparent rounded-full"></div> <span class="text-[10px] font-black uppercase tracking-widest">${applyingText}</span></div>`;
    
    try {
      const response = await fetch(`/set_session_locale?locale=${code}`, {
        method: 'POST',
        headers: {
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        }
      });
      
      if (response.ok) {
        // Show success toast briefly then reload
        if (toast) {
          const toastLabel = toast.querySelector('span');
          if (toastLabel) {
            toastLabel.textContent = code === 'ka' ? window.APP_LANGUAGES.changes_saved_ka : window.APP_LANGUAGES.changes_saved_en;
          }
          toast.classList.remove('hidden');
          setTimeout(() => window.location.reload(), 500);
        } else {
          window.location.reload();
        }
      } else {
        alert(window.APP_LANGUAGES.failed_switch_language);
        btn.disabled = false;
        btn.innerHTML = originalContent;
      }
    } catch (e) {
      console.error(e);
      btn.disabled = false;
      btn.innerHTML = originalContent;
    }
  }

  window.selectDocumentLanguage = function(code) {
    const hiddenField = document.getElementById('document_language_hidden_field');
    if (hiddenField) hiddenField.value = code;
    updateDocumentLanguageDisplay(code);
    document.getElementById('documentLanguageMenu')?.classList.add('hidden');
    
    // Auto-save changes if not guest
    if (!window.is_guest) {
      const btn = document.getElementById('documentLanguageSelectBtn');
      if (btn) {
        btn.disabled = true;
        // Use current system locale for the message, as changing doc language doesn't change UI language immediately
        btn.innerHTML = `<div class="flex items-center gap-2"><div class="animate-spin h-4 w-4 border-2 border-black border-t-transparent rounded-full"></div> <span class="text-[10px] font-black uppercase tracking-widest">${"<%= t('saving') %>"}</span></div>`;
      }
      document.getElementById('settingsForm').requestSubmit();
    }
  };

  window.updateSystemLanguageDisplay = function(code) {
    const flag = document.getElementById('systemLangFlag');
    const text = document.getElementById('systemLangText');
    if (!flag || !text) return;
    
    if (code === 'ka') {
      flag.className = "fi fi-ge rounded-sm shadow-sm";
      text.innerText = "ქართული";
    } else {
      flag.className = "fi fi-us rounded-sm shadow-sm";
      text.innerText = "English";
    }
  };

  window.updateDocumentLanguageDisplay = function(code) {
    const flag = document.getElementById('documentLangFlag');
    const text = document.getElementById('documentLangText');
    if (!flag || !text) return;
    
    if (code === 'ka') {
      flag.className = "fi fi-ge rounded-sm shadow-sm";
      text.innerText = window.APP_LANGUAGES.ka;
    } else {
      flag.className = "fi fi-us rounded-sm shadow-sm";
      text.innerText = window.APP_LANGUAGES.en;
    }
  };

  document.addEventListener('click', () => {
    document.getElementById('currencyMenu')?.classList.add('hidden');
    document.getElementById('systemLanguageMenu')?.classList.add('hidden');
    document.getElementById('documentLanguageMenu')?.classList.add('hidden');
  });

  // PDF Modal
  window.openPdfModal = function() {
    const modal = document.getElementById('pdfModal');
    const style = document.getElementById('invoice_style_input').value || "professional";
    const color = document.getElementById('accent_color_input').value || "";
    const url = "/logs/preview_pdf?style=" + style + "&accent_color=" + encodeURIComponent(color) + "&t=" + new Date().getTime() + "#toolbar=0&view=FitH";
    
    document.getElementById('pdfModalFrame').src = url;
    document.getElementById('pdfModalObject').data = url;
    modal.classList.remove('hidden');
    modal.classList.add('flex');
    document.body.style.overflow = 'hidden';
  };

  window.closePdfModal = function() {
    const modal = document.getElementById('pdfModal');
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    document.body.style.overflow = '';
  };

  window.showSettingsInfo = function(title, message) {
    document.getElementById('infoModalTitle').innerText = title;
    document.getElementById('infoModalMessage').innerText = message;
    const modal = document.getElementById('infoModal');
    if (modal) {
        modal.classList.remove('hidden');
        modal.classList.add('flex');
    }
    document.body.style.overflow = 'hidden';
  };

  window.closeInfoModal = function() {
    const modal = document.getElementById('infoModal');
    if (modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }
    document.body.style.overflow = '';
  };

  // --- AJAX Settings Save (Fetch-based) ---
  document.getElementById('settingsForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const form = e.target;
    const btn = document.getElementById('saveSettingsBtn');
    const mobileBtn = document.getElementById('mobileSaveBtn');
    const text = document.getElementById('btnText');
    const spinner = document.getElementById('btnSpinner');
    const toast = document.getElementById('saveToast');
    
    // UI Loading State
    const originalText = text.innerText;
    const mobileBtnSpan = mobileBtn ? mobileBtn.querySelector('span') : null;
    const originalMobileText = mobileBtnSpan ? mobileBtnSpan.innerText : "";
    
    if (btn) {
      btn.disabled = true;
      text.innerText = "<%= j t('saving') %>...";
      spinner.classList.remove('hidden');
    }
    
    if (mobileBtn) {
      mobileBtn.disabled = true;
      mobileBtn.classList.add('opacity-70');
      if (mobileBtnSpan) mobileBtnSpan.innerText = "<%= j t('saving') %>...";
    }
    
    try {
      const formData = new FormData(form);
      const response = await fetch(form.action, {
        method: 'POST',
        body: formData,
        headers: {
          'Accept': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        }
      });
      
      const result = await response.json();
      
      if (response.ok && result.success) {
        // Show Toast
        const toastLabel = document.getElementById('toastLabel');
        if (toastLabel) toastLabel.textContent = "<%= j t('changes_saved') %>";
        toast.classList.remove('hidden');
        toast.classList.add('animate-bounce');
        
        setTimeout(() => {
          toast.classList.add('hidden');
          toast.classList.remove('animate-bounce');
        }, 3000);
        
        // Refresh Preview (since logo or styles might have changed)
        const currentStyle = document.getElementById('invoice_style_input').value || "classic";
        selectInvoiceStyle(currentStyle);
      } else {
        alert(window.APP_LANGUAGES.error_saving_prefix + (result.errors ? result.errors.join(", ") : window.APP_LANGUAGES.please_check_inputs));
      }
    } catch (error) {
      console.error("Save failed:", error);
      alert(window.APP_LANGUAGES.something_went_wrong_saving);
    } finally {
      // Reset UI
      if (btn) {
        btn.disabled = false;
        text.innerText = originalText;
        spinner.classList.add('hidden');
        btn.blur();
      }
      
      // Reset Default Document Language Button if it was in 'applying' state
      const docLangBtn = document.getElementById('documentLanguageSelectBtn');
      if (docLangBtn && docLangBtn.disabled) {
          const code = document.getElementById('document_language_hidden_field')?.value || 'en';
          docLangBtn.disabled = false;
          // Re-render the button content
          const isKa = code === 'ka';
          docLangBtn.innerHTML = `
            <span id="selectedDocumentLanguageDisplay" class="flex items-center gap-2">
              <span class="fi ${isKa ? 'fi-ge' : 'fi-us'} rounded-sm shadow-sm" id="documentLangFlag"></span> 
              <span class="ml-1 font-black uppercase tracking-widest" id="documentLangText">${isKa ? window.APP_LANGUAGES.ka : window.APP_LANGUAGES.en}</span>
            </span>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M19 9l-7 7-7-7" stroke-width="3" stroke="black"/></svg>
          `;
      }
      
      if (mobileBtn) {
        mobileBtn.disabled = false;
        mobileBtn.classList.remove('opacity-70');
        if (mobileBtnSpan) mobileBtnSpan.innerText = originalMobileText;
        mobileBtn.blur();
      }
    }
  });

</script>

