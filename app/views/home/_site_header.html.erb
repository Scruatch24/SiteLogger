<script>
  function toggleSiteMenu() {
    const menu = document.getElementById('siteMenuMobile');
    const btn = document.getElementById('siteHamburger');
    menu.classList.toggle('open');
    btn.classList.toggle('open');
  }

  /* ── Priority-Plus Nav: auto-overflow + dynamic sizing ── */
  (function() {
    const header   = document.getElementById('siteHeaderInner');
    const logo     = document.getElementById('siteLogo');
    const navWrap  = document.getElementById('siteNavLinks');
    const authWrap = document.getElementById('siteAuthLinks');
    const burger   = document.getElementById('siteHamburger');
    const menuNav  = document.getElementById('siteMenuNav');
    if (!header || !navWrap || !burger) return;

    /* Priority order: home, history, settings (with profile fallback), analytics, pricing */
    const PRIORITY = ['home', 'history', 'settings', 'analytics', 'pricing'];
    const ALT_MAP  = { settings: 'profile' };
    const GAP = 6;          /* px gap between inline items */
    const BASE_PAD = 12;    /* default horizontal padding per side */

    /* Cache natural widths (measured once with base padding) */
    let naturalWidths = {};
    let measured = false;

    function measureNatural() {
      if (measured) return;
      navWrap.querySelectorAll('[data-nav-key]').forEach(el => {
        el.style.display = '';
        el.style.paddingLeft = BASE_PAD + 'px';
        el.style.paddingRight = BASE_PAD + 'px';
        el.classList.remove('nav-hidden');
      });
      navWrap.querySelectorAll('[data-nav-key]').forEach(el => {
        naturalWidths[el.dataset.navKey] = el.offsetWidth;
      });
      measured = true;
    }

    function fitNav() {
      measureNatural();

      /* Reset all nav items */
      navWrap.querySelectorAll('[data-nav-key]').forEach(el => {
        el.classList.add('nav-hidden');
        el.style.paddingLeft = BASE_PAD + 'px';
        el.style.paddingRight = BASE_PAD + 'px';
      });

      /* Measure fixed elements (temporarily show hidden ones) */
      burger.style.display = 'flex';
      if (authWrap) authWrap.classList.remove('auth-hidden');
      const containerW = header.clientWidth;
      const logoMargin = parseFloat(getComputedStyle(logo).marginLeft) || 0;
      const logoW      = logo.offsetWidth + logoMargin;
      const burgerW    = burger.offsetWidth;
      const authW      = authWrap ? authWrap.offsetWidth : 0;

      /* Available space for nav items (we always reserve burger space; hide it later if not needed) */
      let budget = containerW - logoW - burgerW - GAP * 3;

      /* Try to fit auth inline */
      let authInline = false;
      if (authWrap && authW > 0 && authW + GAP <= budget) {
        authInline = true;
        budget -= (authW + GAP);
      }

      /* Greedily fit items in priority order */
      const fitted = [];       /* { key, el } */
      const overflowed = [];   /* keys */

      for (const key of PRIORITY) {
        const el  = navWrap.querySelector('[data-nav-key="' + key + '"]');
        const alt = ALT_MAP[key] ? navWrap.querySelector('[data-nav-key="' + ALT_MAP[key] + '"]') : null;
        if (!el) continue;

        const w = naturalWidths[key] || 0;
        if (w + GAP <= budget) {
          fitted.push({ key, el });
          budget -= (w + GAP);
          if (alt) overflowed.push(ALT_MAP[key]); /* alt always in menu when primary fits */
        } else if (alt) {
          /* Primary doesn't fit — try alternative */
          const altW = naturalWidths[ALT_MAP[key]] || 0;
          if (altW + GAP <= budget) {
            fitted.push({ key: ALT_MAP[key], el: alt });
            budget -= (altW + GAP);
            overflowed.push(key);
          } else {
            overflowed.push(key);
            overflowed.push(ALT_MAP[key]);
          }
        } else {
          overflowed.push(key);
        }
      }

      /* Apply visibility — inline nav */
      fitted.forEach(f => f.el.classList.remove('nav-hidden'));

      /* Hamburger visibility */
      const hasOverflow = overflowed.length > 0;
      burger.classList.toggle('has-overflow', hasOverflow || !authInline);

      /* Auth visibility */
      if (authWrap) {
        authWrap.classList.toggle('auth-hidden', !authInline);
      }

      /* Menu items: show overflowed, hide fitted */
      const fittedKeys = new Set(fitted.map(f => f.key));
      menuNav.querySelectorAll('[data-menu-key]').forEach(el => {
        el.classList.toggle('menu-visible', !fittedKeys.has(el.dataset.menuKey));
      });

      /* ── Dynamic sizing: distribute leftover space as extra padding ── */
      if (fitted.length > 0 && budget > 2) {
        const extra = Math.floor(budget / (fitted.length * 2));
        if (extra >= 1) {
          fitted.forEach(f => {
            f.el.style.paddingLeft  = (BASE_PAD + extra) + 'px';
            f.el.style.paddingRight = (BASE_PAD + extra) + 'px';
          });
        }
      }

      /* If nothing overflowed AND auth is inline, hide hamburger entirely */
      if (!hasOverflow && authInline) {
        burger.style.display = 'none';
      }
    }

    /* Run on load + resize (debounced) */
    let resizeTimer;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(fitNav, 80);
    });

    /* Initial fit after fonts are loaded */
    if (document.fonts && document.fonts.ready) {
      document.fonts.ready.then(function() { requestAnimationFrame(fitNav); });
    } else {
      window.addEventListener('load', fitNav);
    }
    /* Also run immediately for fast paint */
    requestAnimationFrame(fitNav);

    /* ── Logo hover animation (unchanged) ── */
    const isMobile = () => burger.classList.contains('has-overflow') || window.innerWidth < 480;
    const VISITED_KEY = 'logoTextVisited';

    function attachDesktopHover() {
      logo.addEventListener('mouseenter', function() {
        if (!isMobile()) logo.classList.add('logo-text-open');
      });
      logo.addEventListener('mouseleave', function() {
        if (!isMobile()) logo.classList.remove('logo-text-open');
      });
    }

    var hasVisited = localStorage.getItem(VISITED_KEY) === 'true';

    if (!isMobile()) {
      if (!hasVisited) {
        localStorage.setItem(VISITED_KEY, 'true');
      }
      setTimeout(function() {
        logo.classList.add('logo-text-open');
        setTimeout(function() {
          logo.classList.remove('logo-text-open');
          attachDesktopHover();
        }, 3000);
      }, 800);

      if (hasVisited) {
        attachDesktopHover();
      }
    } else {
      attachDesktopHover();
    }
  })();
</script>
