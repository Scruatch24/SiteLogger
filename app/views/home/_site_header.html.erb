</nav>

<script>
  function toggleSiteMenu() {
    const menu = document.getElementById('siteMenuMobile');
    const btn = document.querySelector('.site-hamburger');
    menu.classList.toggle('open');
    btn.classList.toggle('open');
  }

  (function() {
    const logo = document.querySelector('.site-logo');
    if (!logo) return;

    let initialDone = false;
    const isMobile = () => window.innerWidth < 768;
    const STORAGE_KEY = 'logoTextOpen';
    const VISITED_KEY = 'logoTextVisited';

    function attachDesktopHover() {
      logo.addEventListener('mouseenter', function() {
        if (!isMobile()) logo.classList.add('logo-text-open');
      });
      logo.addEventListener('mouseleave', function() {
        if (!isMobile()) logo.classList.remove('logo-text-open');
      });
    }

    var hasVisited = localStorage.getItem(VISITED_KEY) === 'true';
    var savedOpen = localStorage.getItem(STORAGE_KEY);

    if (isMobile()) {
      if (!hasVisited) {
        // First visit: animate open after delay, stay open
        localStorage.setItem(VISITED_KEY, 'true');
        localStorage.setItem(STORAGE_KEY, 'true');
        setTimeout(function() {
          logo.classList.add('logo-text-open');
          initialDone = true;
        }, 800);
      } else if (savedOpen === 'true') {
        // Returning visit, user left it open — show immediately
        setTimeout(function() {
          logo.classList.add('logo-text-open');
          initialDone = true;
        }, 800);
      } else {
        // Returning visit, user chose to hide it — keep hidden
        initialDone = true;
      }
    } else {
      // Desktop: initial animation then hover
      if (!hasVisited) {
        localStorage.setItem(VISITED_KEY, 'true');
      }
      setTimeout(function() {
        logo.classList.add('logo-text-open');
        setTimeout(function() {
          logo.classList.remove('logo-text-open');
          initialDone = true;
          attachDesktopHover();
        }, 3000);
      }, 800);
    }

    // Desktop: also attach hover if returning visitor
    if (!isMobile() && hasVisited) {
      attachDesktopHover();
    }

    // Mobile: never navigate, tap toggle after initial animation
    logo.addEventListener('click', function(e) {
      if (isMobile()) {
        e.preventDefault();
        if (initialDone) {
          logo.classList.toggle('logo-text-open');
          localStorage.setItem(STORAGE_KEY, logo.classList.contains('logo-text-open'));
        }
      }
    });
  })();
</script>
