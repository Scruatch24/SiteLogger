<script>
  function toggleSiteMenu() {
    const menu = document.getElementById('siteMenuMobile');
    const btn = document.getElementById('siteHamburger');
    menu.classList.toggle('open');
    btn.classList.toggle('open');
  }

  /* ── Priority-Plus Nav: mobile-only overflow + equalized sizing ── */
  (function() {
    const header   = document.getElementById('siteHeaderInner');
    const logo     = document.getElementById('siteLogo');
    const navWrap  = document.getElementById('siteNavLinks');
    const authWrap = document.getElementById('siteAuthLinks');
    const burger   = document.getElementById('siteHamburger');
    const menuNav  = document.getElementById('siteMenuNav');
    if (!header || !navWrap || !burger) return;

    const PRIORITY = ['home', 'history', 'settings', 'analytics', 'pricing'];
    const ALT_MAP  = { settings: 'profile' };
    const EDGE_MARGIN = 10; /* equal margin on logo-left and burger-right */
    const NAV_GAP = 4;      /* gap between nav buttons */

    /* Measure natural (minimum) widths once — uses desktop rendering */
    let natW = {};
    let measured = false;

    function measureNatural() {
      if (measured) return;
      /* Temporarily show all items at their natural size */
      navWrap.querySelectorAll('[data-nav-key]').forEach(el => {
        el.classList.remove('nav-hidden');
        el.style.width = '';
      });
      /* Read widths */
      navWrap.querySelectorAll('[data-nav-key]').forEach(el => {
        natW[el.dataset.navKey] = el.offsetWidth;
      });
      measured = true;
    }

    function fitNav() {
      /* ── Desktop: CSS handles everything, just clean up ── */
      if (window.innerWidth >= 768) {
        navWrap.classList.remove('mobile-fit-active');
        navWrap.querySelectorAll('[data-nav-key]').forEach(el => {
          el.classList.remove('nav-hidden');
          el.style.width = '';
        });
        burger.classList.remove('has-overflow');
        burger.style.display = '';
        if (authWrap) authWrap.classList.remove('auth-hidden');
        menuNav.querySelectorAll('[data-menu-key]').forEach(el => el.classList.remove('menu-visible'));
        return;
      }

      /* ── Mobile ── */
      measureNatural();
      navWrap.classList.add('mobile-fit-active');

      /* Hide auth on mobile (Log Out only in hamburger) */
      if (authWrap) authWrap.classList.add('auth-hidden');

      /* Always show hamburger on mobile */
      burger.classList.add('has-overflow');
      burger.style.display = '';

      /* Reset all nav items to hidden */
      navWrap.querySelectorAll('[data-nav-key]').forEach(el => {
        el.classList.add('nav-hidden');
        el.style.width = '';
      });

      /* Calculate fixed zones:
         [EDGE_MARGIN] [LOGO] [EDGE_MARGIN] ... navs ... [EDGE_MARGIN] [BURGER] [EDGE_MARGIN]
         But logo and burger already sit inside the header padding.
         We measure their actual occupied space from the DOM. */
      var logoBox = logo.getBoundingClientRect();
      var burgerBox = burger.getBoundingClientRect();
      var headerBox = header.getBoundingClientRect();

      /* Available nav space = gap between logo right edge and burger left edge, minus small inner margins */
      var navStart = logoBox.right - headerBox.left + EDGE_MARGIN;
      var navEnd   = burgerBox.left - headerBox.left - EDGE_MARGIN;
      var budget   = navEnd - navStart;
      if (budget < 0) budget = 0;

      /* Greedily fit items in priority order using natural widths as minimums */
      var fitted = [];
      var overflowed = [];
      var totalMinW = 0;

      for (var i = 0; i < PRIORITY.length; i++) {
        var key = PRIORITY[i];
        var el  = navWrap.querySelector('[data-nav-key="' + key + '"]');
        var alt = ALT_MAP[key] ? navWrap.querySelector('[data-nav-key="' + ALT_MAP[key] + '"]') : null;
        if (!el) continue;

        var w = natW[key] || 0;
        var gapNeeded = fitted.length > 0 ? NAV_GAP : 0;

        if (totalMinW + w + gapNeeded <= budget) {
          fitted.push({ key: key, el: el, minW: w });
          totalMinW += w + gapNeeded;
          if (alt) overflowed.push(ALT_MAP[key]);
        } else if (alt) {
          var altKey = ALT_MAP[key];
          var altW = natW[altKey] || 0;
          if (totalMinW + altW + gapNeeded <= budget) {
            fitted.push({ key: altKey, el: alt, minW: altW });
            totalMinW += altW + gapNeeded;
            overflowed.push(key);
          } else {
            overflowed.push(key);
            overflowed.push(altKey);
          }
        } else {
          overflowed.push(key);
        }
      }

      /* ── Show, equalize, verify — loop until no overlap ── */
      var safe = 10; /* max iterations to prevent infinite loop */
      while (safe-- > 0) {
        /* Show fitted items, hide others */
        navWrap.querySelectorAll('[data-nav-key]').forEach(function(el) { el.classList.add('nav-hidden'); el.style.width = ''; });
        for (var j = 0; j < fitted.length; j++) fitted[j].el.classList.remove('nav-hidden');

        if (fitted.length === 0) break;

        /* Equalize button widths to fill budget */
        var totalGaps = (fitted.length - 1) * NAV_GAP;
        var spaceForButtons = budget - totalGaps;
        var targetW = Math.floor(spaceForButtons / fitted.length);

        var allFit = true;
        for (var k = 0; k < fitted.length; k++) {
          if (fitted[k].minW > targetW) { allFit = false; break; }
        }

        if (allFit) {
          for (var k = 0; k < fitted.length; k++) fitted[k].el.style.width = targetW + 'px';
        } else {
          var locked = [], unlocked = [], lockedTotal = 0;
          for (var k = 0; k < fitted.length; k++) {
            if (fitted[k].minW > targetW) locked.push(fitted[k]);
            else unlocked.push(fitted[k]);
          }
          for (var k = 0; k < locked.length; k++) {
            locked[k].el.style.width = locked[k].minW + 'px';
            lockedTotal += locked[k].minW;
          }
          if (unlocked.length > 0) {
            var remaining = spaceForButtons - lockedTotal;
            var eachW = Math.floor(remaining / unlocked.length);
            for (var k = 0; k < unlocked.length; k++) {
              unlocked[k].el.style.width = Math.max(eachW, unlocked[k].minW) + 'px';
            }
          }
        }

        /* ── Post-render verification: measure actual rendered total ── */
        var actualTotal = 0;
        for (var j = 0; j < fitted.length; j++) {
          actualTotal += fitted[j].el.getBoundingClientRect().width;
        }
        actualTotal += totalGaps;

        if (actualTotal <= budget + 0.5) break; /* fits — done */

        /* Overflow: drop the last fitted item and retry */
        var dropped = fitted.pop();
        dropped.el.classList.add('nav-hidden');
        dropped.el.style.width = '';
        overflowed.push(dropped.key);
      }

      /* Menu items: show overflowed ones, hide fitted ones */
      var fittedSet = {};
      for (var j = 0; j < fitted.length; j++) fittedSet[fitted[j].key] = true;
      menuNav.querySelectorAll('[data-menu-key]').forEach(function(el) {
        el.classList.toggle('menu-visible', !fittedSet[el.dataset.menuKey]);
      });
    }

    /* Run on load + resize (debounced) */
    var resizeTimer;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(fitNav, 80);
    });

    if (document.fonts && document.fonts.ready) {
      document.fonts.ready.then(function() { requestAnimationFrame(fitNav); });
    } else {
      window.addEventListener('load', fitNav);
    }
    requestAnimationFrame(fitNav);

    /* ── Logo hover animation (unchanged) ── */
    const isMobile = () => burger.classList.contains('has-overflow') || window.innerWidth < 480;
    const VISITED_KEY = 'logoTextVisited';

    function attachDesktopHover() {
      logo.addEventListener('mouseenter', function() {
        if (!isMobile()) logo.classList.add('logo-text-open');
      });
      logo.addEventListener('mouseleave', function() {
        if (!isMobile()) logo.classList.remove('logo-text-open');
      });
    }

    var hasVisited = localStorage.getItem(VISITED_KEY) === 'true';

    if (!isMobile()) {
      if (!hasVisited) {
        localStorage.setItem(VISITED_KEY, 'true');
      }
      setTimeout(function() {
        logo.classList.add('logo-text-open');
        setTimeout(function() {
          logo.classList.remove('logo-text-open');
          attachDesktopHover();
        }, 3000);
