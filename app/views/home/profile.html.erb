<script>
  let cropper = null;

  function openCropModal() {
    const modal = document.getElementById('cropModal');
    const imageTarget = document.getElementById('crop_image_target');
    const loader = document.getElementById('crop_loader');
    const preview = document.getElementById('client-preview'); // Newly uploaded
    const existing = document.getElementById('logo-preview'); // Existing from server

    // Determine source image
    let src = null;
    if (preview && !preview.classList.contains('hidden') && preview.src) {
       src = preview.src;
    } else if (existing && !existing.classList.contains('hidden') && existing.src) {
       src = existing.src;
    }

    if (!src) return; // No image to crop

    imageTarget.src = src;
    imageTarget.classList.add('opacity-0'); // Hide initially
    if (loader) loader.classList.remove('hidden'); // Show loader
    
    // Reset cropper if exists
    if (cropper) {
      cropper.destroy();
      cropper = null;
    }

    if (modal) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      
      // Initialize cropper after modal is visible
      setTimeout(() => {
         cropper = new Cropper(imageTarget, {
            viewMode: 1,
            dragMode: 'move',
            autoCropArea: 0.9,
            restore: false,
            guides: true,
            center: true,
            highlight: false,
            cropBoxMovable: true,
            cropBoxResizable: true,
            toggleDragModeOnDblclick: false,
            ready: function() {
               // Cropper is ready: hide loader, show image
               if (loader) loader.classList.add('hidden');
               imageTarget.classList.remove('opacity-0');
            }
         });
      }, 100);
    }
  }

  function closeCropModal() {
    const modal = document.getElementById('cropModal');
    if (modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }
    if (cropper) {
       cropper.destroy();
       cropper = null;
    }

    // Auto-Save logic:
    // If the file input has a file (meaning user uploaded something or cropped something),
    // we assume they want to save it now that they are leaving the crop flow.
    submitProfileFormIfFilesSelected();
  }

  function submitProfileFormIfFilesSelected() {
    const fileInput = document.querySelector('input[type="file"][name="profile[logo]"]');
    const form = document.getElementById('profileForm');
    
    // Check if input has files and form exists
    if (fileInput && fileInput.files && fileInput.files.length > 0 && form) {
      // Use requestSubmit to trigger Rails remote form submission nicely
      form.requestSubmit();
      
      // Optional: Show some feedback? The form usually handles its own 'saving...' state via UJS
      // but we can ensure the button shows loading if needed.
    }
  }

  function saveCrop() {
    if (!cropper) return;

    // Get cropped canvas
    const canvas = cropper.getCroppedCanvas({
       maxWidth: 1024,
       maxHeight: 1024,
       fillColor: '#fff',
       imageSmoothingEnabled: true,
       imageSmoothingQuality: 'high',
    });

    if (canvas) {
       // Convert to blob and update file input
       canvas.toBlob((blob) => {
          // 1. Update Preview
          const url = URL.createObjectURL(blob);
          const clientPreview = document.getElementById('client-preview');
          const existingLogo = document.getElementById('logo-preview');
          const defaultIcon = document.getElementById('default-logo-icon');
          
          if (existingLogo) existingLogo.classList.add('hidden');
          if (defaultIcon) defaultIcon.classList.add('hidden');
          
          if (clientPreview) {
             clientPreview.src = url;
             clientPreview.classList.remove('hidden');
          }

          // 2. Update File Input
          const fileInput = document.querySelector('input[type="file"][name="profile[logo]"]');
          if (fileInput) {
             const file = new File([blob], "cropped-logo.png", { type: "image/png" });
             const dataTransfer = new DataTransfer();
             dataTransfer.items.add(file);
             fileInput.files = dataTransfer.files;
             
             // Ensure remove field is 0
             const removeField = document.getElementById('remove_logo_field');
             if (removeField) removeField.value = "0";
          }
          
          // Close modal (which triggers auto-save via submitProfileFormIfFilesSelected)
          closeCropModal();
       }, 'image/png');
    }
  }
</script>
