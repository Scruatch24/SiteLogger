<% is_guest = @profile.guest? && !user_signed_in? %>
<% is_logo_locked = !@profile.paid? && !is_guest %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.2.3/css/flag-icons.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

<div class="min-h-screen text-black font-sans p-4 pb-24 md:pb-4">
  <header class="md:static md:bg-transparent px-1 py-3 mb-2 md:mb-4 flex items-center justify-center">
    <h1 class="text-xl md:text-2xl font-black tracking-tighter text-black uppercase truncate pr-2 leading-none"><%= t('profile') %></h1>
  </header>

  <div id="saveToast" class="fixed top-12 left-0 right-0 z-[10000] hidden flex justify-center pointer-events-none">
    <div class="bg-green-600 text-white px-8 py-4 rounded-full font-black text-sm uppercase tracking-[0.2em] shadow-[8px_8px_0px_0px_#000000] flex items-center gap-3 border-2 border-black animate-in fade-in zoom-in duration-300">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
      </svg>
      <span><%= t('changes_saved') %></span>
    </div>
  </div>


  <% if is_guest %>
    <!-- Guest: Modal-style Profile Benefits Banner -->
    <div class="px-0 mb-8 max-w-md mx-auto">
      <div class="relative zenith-container rounded-[32px]">
        <div class="zenith-bg"></div>
        <div class="zenith-grid"></div>
        <div class="zenith-trace">
          <svg preserveAspectRatio="none">
            <rect x="0" y="0" width="100%" height="100%" rx="32" ry="32" />
          </svg>
        </div>
        <div class="zenith-content p-6 md:p-8">
          <!-- Header: Centered & Title-like -->
          <div class="flex flex-col items-center justify-center gap-2 mb-8 text-center">
            <div class="w-12 h-12 rounded-2xl bg-orange-600/20 border border-orange-500/30 flex items-center justify-center mb-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <h3 class="text-2xl font-black tracking-tighter uppercase leading-none text-white"><%= t('free_account') %></h3>
            <p class="text-[10px] font-black uppercase tracking-[0.2em] text-orange-500/80"><%= t('business_profile_perks') %></p>
          </div>
          
          <!-- Benefits Grid: 2x2 for clean layout -->
          <div class="grid grid-cols-2 gap-3 mb-6">
            <!-- Benefit 1: Logo -->
            <div class="bg-white/5 border border-white/10 rounded-2xl p-3 flex flex-col items-center text-center gap-2">
              <div class="w-8 h-8 rounded-lg bg-orange-600/20 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <span class="text-[9px] font-black text-white uppercase tracking-widest leading-tight"><%= t('your_logo') %></span>
            </div>
            <!-- Benefit 2: Details -->
            <div class="bg-white/5 border border-white/10 rounded-2xl p-3 flex flex-col items-center text-center gap-2">
              <div class="w-8 h-8 rounded-lg bg-orange-600/20 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <span class="text-[9px] font-black text-white uppercase tracking-widest leading-tight"><%= t('business_info') %></span>
            </div>
            <!-- Benefit 3: Payment -->
            <div class="bg-white/5 border border-white/10 rounded-2xl p-3 flex flex-col items-center text-center gap-2">
              <div class="w-8 h-8 rounded-lg bg-orange-600/20 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
              </div>
              <span class="text-[9px] font-black text-white uppercase tracking-widest leading-tight"><%= t('payment_details') %></span>
            </div>
            <!-- Benefit 4: Tax -->
            <div class="bg-white/5 border border-white/10 rounded-2xl p-3 flex flex-col items-center text-center gap-2">
              <div class="w-8 h-8 rounded-lg bg-orange-600/20 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="text-[9px] font-black text-white uppercase tracking-widest leading-tight"><%= t('tax_id_info') %></span>
            </div>
          </div>

          <!-- Action Button -->
          <%= link_to new_user_registration_path, class: "w-full py-4 bg-orange-600 hover:bg-orange-500 text-white rounded-2xl font-black uppercase text-xs tracking-[0.2em] shadow-[0_4px_20px_rgba(234,88,12,0.4)] transition-all flex items-center justify-center gap-2 group" do %>
            <%= t('sign_up_free') %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <%= form_with model: @profile, url: save_profile_path, id: "profileForm", local: false, class: "max-w-md mx-auto space-y-8 #{is_guest ? 'opacity-40 grayscale pointer-events-none select-none' : ''}" do |f| %>
    <div class="space-y-6 pt-0">
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <label class="text-[12px] font-black text-orange-600 uppercase tracking-widest ml-1"><%= t('company_name') %></label>
          <span class="bg-orange-100 text-orange-600 text-[9px] font-black uppercase tracking-wider px-1.5 py-0.5 rounded-md border border-orange-200"><%= t('shows_up_in_invoice') %></span>
        </div>
        <%= f.text_field :business_name, placeholder: t('business_name_placeholder'), class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black focus:border-orange-500 focus:shadow-[5px_5px_0px_0px_#F97316] focus:-translate-y-0.5 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all disabled:bg-gray-50 disabled:text-gray-400 disabled:cursor-not-allowed", disabled: is_guest %>
      </div>

      <div class="space-y-3">
        <div class="flex items-center gap-2">
          <label class="text-[12px] font-black text-black uppercase tracking-widest ml-1"><%= t('business_logo') %></label>
          <span class="bg-orange-100 text-orange-600 text-[9px] font-black uppercase tracking-wider px-1.5 py-0.5 rounded-md border border-orange-200"><%= t('shows_up_in_invoice') %></span>
          <% if is_logo_locked %>
            <span class="bg-black text-white text-[8px] font-black uppercase tracking-wider px-1.5 py-0.5 rounded-md">PRO</span>
          <% end %>
        </div>
        <div class="w-full bg-white border-2 border-black rounded-xl p-6 shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] <%= 'relative' if is_logo_locked %>">
          <% if is_logo_locked %>
            <div class="absolute inset-0 bg-white/60 backdrop-blur-[1px] z-30 rounded-xl flex flex-col items-center justify-center gap-3 cursor-pointer" onclick="if(window.showPremiumModal) window.showPremiumModal(true);">
              <div class="w-12 h-12 rounded-2xl bg-black flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              </div>
              <span class="text-[10px] font-black uppercase tracking-widest text-black"><%= t('pro_only', default: 'PRO Only') %></span>
            </div>
          <% end %>
          
          <!-- Large Preview Area -->
          <div class="w-full h-48 bg-gray-50 border-2 border-dashed border-gray-200 rounded-lg flex items-center justify-center relative overflow-hidden mb-6 group hover:border-orange-200 transition-colors">
             <% logo_present = @profile.logo.attached? && @profile.logo.persisted? %>
             
             <!-- Crop Button (Pencil Icon) -->
             <button type="button" 
                     id="crop_logo_btn" 
                     onclick="openCropModal()" 
                     class="absolute top-2 left-2 z-20 w-8 h-8 flex items-center justify-center bg-white border border-gray-200 rounded-lg shadow-sm text-gray-500 hover:text-orange-600 hover:border-orange-200 transition-colors <%= logo_present ? '' : 'hidden' %>"
                     title="<%= t('crop_image', default: 'Crop Image') %>">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                 <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
               </svg>
             </button>

             <% if logo_present %>
                <%= image_tag @profile.logo, id: "logo-preview", class: "max-w-full max-h-full object-contain p-4 relative z-10" %>
             <% end %>
             
             <div id="default-logo-icon" class="<%= logo_present ? 'hidden' : '' %> text-gray-300 flex flex-col items-center gap-3 absolute inset-0 justify-center z-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span class="text-xs font-black uppercase tracking-widest text-gray-300"><%= t('no_logo_set') %></span>
             </div>
             <img id="client-preview" class="hidden absolute inset-0 w-full h-full object-contain bg-white p-4" />
          </div>

          <!-- Controls Footer -->
          <div class="flex flex-col md:flex-row items-center justify-between gap-4">
             <div class="flex flex-col items-center md:items-start text-[10px] font-bold text-gray-400 uppercase tracking-wider leading-tight text-center md:text-left">
               <span><%= t('supports_formats') %></span>
               <span><%= t('max_file_size') %></span>
             </div>

             <div class="flex items-center gap-3 w-full md:w-auto">
                <% if @profile.logo.attached? %>
                  <button type="button" id="remove_logo_btn" 
                          data-delete-text="<%= t('delete') %>" 
                          data-removed-text="<%= t('removed') %>"
                          onclick="<%= (is_guest || is_logo_locked) ? '' : 'markLogoForRemoval()' %>" 
                          class="flex-1 md:flex-none text-[10px] font-black uppercase tracking-widest text-red-600 border-2 border-red-100 bg-red-50 px-4 py-3 rounded-lg hover:bg-red-100 transition-all text-center <%= 'opacity-50 cursor-not-allowed' if is_guest || is_logo_locked %>">
                    <%= t('delete') %>
                  </button>
                  <%= f.hidden_field :remove_logo, value: "0", id: "remove_logo_field" %>
               <% end %>

               <%= f.label :logo, class: "flex-1 md:flex-none cursor-pointer text-xs font-black uppercase tracking-widest text-white border-2 border-black bg-black px-6 py-3 rounded-lg hover:bg-orange-600 hover:border-orange-600 active:translate-y-[1px] transition-all shadow-[4px_4px_0px_0px_rgba(0,0,0,0.2)] hover:shadow-none text-center flex items-center justify-center gap-2 group #{(is_guest || is_logo_locked) ? 'opacity-50 cursor-not-allowed pointer-events-none' : ''}" do %>
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" /></svg>
                 <span class="md:hidden"><%= t('upload') %></span>
                 <span class="hidden md:inline"><%= t('upload_logo') %></span>
                 <%= f.file_field :logo, class: "hidden", accept: "image/png,image/jpeg,image/jpg", onchange: "previewImage(this)", disabled: (is_guest || is_logo_locked) %>
               <% end %>
             </div>
          </div>

        </div>
      </div>

      <div class="border-t-2 border-dashed border-gray-200"></div>

      <div class="space-y-2">
        <div class="flex justify-between items-center">
          <div class="flex items-center gap-2">
            <label class="text-[12px] font-black text-black uppercase tracking-widest ml-1"><%= t('payment_instructions') %></label>
            <span class="bg-orange-100 text-orange-600 text-[9px] font-black uppercase tracking-wider px-1.5 py-0.5 rounded-md border border-orange-200"><%= t('shows_up_in_invoice') %></span>
          </div>
          <span id="payment_instructions_counter" class="hidden text-[9px] font-black uppercase text-gray-400"><%= t('max_chars_per_line') %></span>
        </div>
        <%= f.text_area :payment_instructions, rows: 3, placeholder: t('payment_instructions_placeholder'), class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-medium text-black focus:border-orange-500 focus:shadow-[5px_5px_0px_0px_#F97316] focus:-translate-y-0.5 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all resize-none custom-scrollbar disabled:bg-gray-50 disabled:text-gray-400 disabled:cursor-not-allowed", onkeydown: "return checkCharLimit(event, this, 50, 8)", oninput: "limitLinesAndChars(this, 50, 8); autoResize(this)", style: "min-height: 120px; max-height: 300px;", disabled: is_guest %>
      </div>

      <div class="space-y-2">
        <div class="flex justify-between items-center">
          <div class="flex items-center gap-2">
            <label class="text-[12px] font-black text-black uppercase tracking-widest ml-1"><%= t('invoice_note') %></label>
            <span class="bg-orange-100 text-orange-600 text-[9px] font-black uppercase tracking-wider px-1.5 py-0.5 rounded-md border border-orange-200"><%= t('shows_up_in_invoice') %></span>
          </div>
          <span id="note_counter" class="hidden text-[9px] font-black uppercase text-gray-400"><%= t('max_chars_per_line') %></span>
        </div>
        <%= f.text_area :note, rows: 2, placeholder: t('invoice_note_placeholder'), class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-medium text-black focus:border-orange-500 focus:shadow-[5px_5px_0px_0px_#F97316] focus:-translate-y-0.5 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all resize-none custom-scrollbar disabled:bg-gray-50 disabled:text-gray-400 disabled:cursor-not-allowed", onkeydown: "return checkCharLimit(event, this, 50, 2)", oninput: "limitLinesAndChars(this, 50, 2); autoResize(this)", style: "min-height: 80px; max-height: 200px;", disabled: is_guest %>
      </div>

      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <label class="text-[12px] font-black text-black uppercase tracking-widest ml-1"><%= t('email') %></label>
          <span class="bg-orange-100 text-orange-600 text-[9px] font-black uppercase tracking-wider px-1.5 py-0.5 rounded-md border border-orange-200"><%= t('shows_up_in_invoice') %></span>
        </div>
        <%= f.email_field :email, placeholder: t('email_placeholder'), class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black focus:border-orange-500 focus:shadow-[5px_5px_0px_0px_#F97316] focus:-translate-y-0.5 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all disabled:bg-gray-50 disabled:text-gray-400 disabled:cursor-not-allowed", disabled: is_guest %>
      </div>

      <div class="space-y-2">
        <div class="flex items-center gap-2">
            <label class="text-[12px] font-black text-black uppercase tracking-widest ml-1"><%= t('phone') %></label>
            <span class="bg-orange-100 text-orange-600 text-[9px] font-black uppercase tracking-wider px-1.5 py-0.5 rounded-md border border-orange-200"><%= t('shows_up_in_invoice') %></span>
        </div>
        <%= f.text_field :phone, placeholder: t('phone_placeholder'), class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black focus:border-orange-500 focus:shadow-[5px_5px_0px_0px_#F97316] focus:-translate-y-0.5 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all disabled:bg-gray-50 disabled:text-gray-400 disabled:cursor-not-allowed", disabled: is_guest %>
      </div>

      <div class="space-y-2">
        <div class="flex justify-between items-center">
          <div class="flex items-center gap-2">
            <label class="text-[12px] font-black text-black uppercase tracking-widest ml-1"><%= t('address') %></label>
            <span class="bg-orange-100 text-orange-600 text-[9px] font-black uppercase tracking-wider px-1.5 py-0.5 rounded-md border border-orange-200"><%= t('shows_up_in_invoice') %></span>
          </div>
          <span id="address_counter" class="hidden text-[9px] font-black uppercase text-gray-400"><%= t('max_chars_per_line') %></span>
        </div>
        <%= f.text_area :address, rows: 3, placeholder: t('address_placeholder'), class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-medium text-black focus:border-orange-500 focus:shadow-[5px_5px_0px_0px_#F97316] focus:-translate-y-0.5 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all resize-none custom-scrollbar disabled:bg-gray-50 disabled:text-gray-400 disabled:cursor-not-allowed", onkeydown: "return checkCharLimit(event, this, 50, 4)", oninput: "limitLinesAndChars(this, 50, 4); autoResize(this)", style: "min-height: 100px; max-height: 200px;", disabled: is_guest %>
      </div>

      <div class="space-y-2">
        <div class="flex items-center gap-2">
            <label class="text-[12px] font-black text-black uppercase tracking-widest ml-1"><%= t('tax_id') %></label>
            <span class="bg-orange-100 text-orange-600 text-[9px] font-black uppercase tracking-wider px-1.5 py-0.5 rounded-md border border-orange-200"><%= t('shows_up_in_invoice') %></span>
        </div>
        <%= f.text_field :tax_id, placeholder: t('tax_id_placeholder'), class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black focus:border-orange-500 focus:shadow-[5px_5px_0px_0px_#F97316] focus:-translate-y-0.5 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all disabled:bg-gray-50 disabled:text-gray-400 disabled:cursor-not-allowed", disabled: is_guest %>
      </div>
    <div class="w-full bg-orange-600/40 text-white/60 border-2 border-white/10 font-black py-4 rounded-xl transition-all uppercase text-xs tracking-[0.2em] items-center justify-center gap-3 shadow-none <%= is_guest ? 'flex' : 'hidden' %>">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white/60" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
      </svg>
      <span><%= t('sign_up_to_save') %></span>
    </div>

    <button type="submit" id="saveProfileBtn" class="<%= is_guest ? 'hidden' : 'flex' %> w-full bg-orange-600 text-white border-2 border-black font-black py-4 rounded-xl shadow-[4px_4px_0px_0px_#000000] active:scale-[0.97] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all uppercase text-xs tracking-[0.2em] items-center justify-center gap-3 save-btn-hover">
      <span id="btnText"><%= t('save_settings') %></span>
      <div id="btnSpinner" class="hidden">
        <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
    </button>
  <% end %>
</div>

<style>
  .custom-scrollbar::-webkit-scrollbar { width: 10px; }
  .custom-scrollbar::-webkit-scrollbar-track { background: #f1f1f1; border-radius: 5px; }
  .custom-scrollbar::-webkit-scrollbar-thumb { background: #ea580c; border-radius: 5px; }
