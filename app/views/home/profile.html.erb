<script>
  function autoResize(el) {
    if (!el) return;
    const computed = window.getComputedStyle(el);
    const minHeight = parseInt(computed.minHeight) || 80;
    const maxHeight = parseInt(computed.maxHeight) || 800;
    
    // Store current height, reset to min to measure true scrollHeight
    const currentHeight = el.offsetHeight;
    el.style.height = minHeight + 'px';
    const scrollHeight = el.scrollHeight;
    
    // Calculate new height within bounds
    let newHeight = Math.max(minHeight, Math.min(scrollHeight, maxHeight));
    
    el.style.height = newHeight + 'px';
    el.style.overflowY = scrollHeight > maxHeight ? 'auto' : 'hidden';
  }

  function checkCharLimit(e, el, charMax, lineMax) {
    const lines = el.value.split('\n');
    const cursorPosition = el.selectionStart;
    
    // Find current line index
    let currentLineIndex = 0;
    let charsCount = 0;
    for(let i=0; i<lines.length; i++) {
      charsCount += lines[i].length + 1; // +1 for \n
      if(cursorPosition < charsCount) {
        currentLineIndex = i;
        break;
      }
    }

    if (e.key === 'Enter') {
      if (lines.length >= lineMax) {
        e.preventDefault();
        return false;
      }
    } else if (e.key.length === 1 && !e.ctrlKey && !e.metaKey && !e.altKey) {
      // Regular character key
      if (lines[currentLineIndex].length >= charMax) {
        e.preventDefault();
        return false;
      }
    }
    return true;
  }

  function limitLinesAndChars(el, charMax, lineMax) {
    let lines = el.value.split('\n');
    let changed = false;

    // Enforce line count
    if (lines.length > lineMax) {
      lines = lines.slice(0, lineMax);
      changed = true;
    }

    // Enforce char count per line
    lines = lines.map(line => {
      if (line.length > charMax) {
        changed = true;
        return line.substring(0, charMax);
      }
      return line;
    });

    if (changed) {
      const start = el.selectionStart;
      const end = el.selectionEnd;
      el.value = lines.join('\n');
      el.setSelectionRange(start, end);
    }

    // Update counter color
    const counterId = el.name.includes('address') ? 'address_counter' : 'payment_instructions_counter';
    const counter = document.getElementById(counterId);
    if (counter) {
      const anyOver = lines.some(l => l.length >= charMax);
      if (anyOver) {
        counter.classList.remove('text-gray-400');
        counter.classList.add('text-orange-600');
      } else {
        counter.classList.remove('text-orange-600');
        counter.classList.add('text-gray-400');
      }
    }
  }

  function previewImage(input) {
    const file = input.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function(e) {
        const preview = document.getElementById('client-preview');
        const existingLogo = document.getElementById('logo-preview');
        const defaultIcon = document.getElementById('default-logo-icon');
        
        if (existingLogo) existingLogo.classList.add('hidden');
        if (defaultIcon) defaultIcon.classList.add('hidden');
        
        preview.src = e.target.result;
        preview.classList.remove('hidden');
        
        // Reset remove flag if user uploads new one
        const removeField = document.getElementById('remove_logo_field');
        if (removeField) removeField.value = "0";
      }
      reader.readAsDataURL(file);
    }
  }

  function markLogoForRemoval() {
    const modal = document.getElementById('removeLogoModal');
    if (modal) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }
  }

  function closeRemoveLogoModal() {
    const modal = document.getElementById('removeLogoModal');
    if (modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }
  }

  function confirmRemoveLogo() {
    const removeField = document.getElementById('remove_logo_field');
    const logoPreview = document.getElementById('logo-preview');
    const defaultIcon = document.getElementById('default-logo-icon');
    const removeBtn = document.getElementById('remove_logo_btn');
    const clientPreview = document.getElementById('client-preview'); // Ensure this is also hidden
      
    if (removeField) removeField.value = "1";
    
    // Hide visual image completely
    if (logoPreview) logoPreview.classList.add('hidden');
    if (clientPreview) clientPreview.classList.add('hidden');
    
    // Show default placeholder
    if (defaultIcon) defaultIcon.classList.remove('hidden');

    // Update button state
    if (removeBtn) {
       removeBtn.innerText = "Removed";
       removeBtn.classList.add('opacity-50', 'cursor-not-allowed');
       removeBtn.onclick = null; // Prevent clicking again
    }
    
    closeRemoveLogoModal();
  }

  document.addEventListener("DOMContentLoaded", () => {
    window.isNewProfile = <%= @is_new_profile %>;
    document.querySelectorAll('textarea').forEach(el => autoResize(el));

    document.getElementById('profileForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const btn = document.getElementById('saveProfileBtn');
      const mobileBtn = document.getElementById('mobileSaveBtn');
      const text = document.getElementById('btnText');
      const spinner = document.getElementById('btnSpinner');
      const toast = document.getElementById('saveToast');
      
      const originalText = text.innerText;
      const mobileBtnSpan = mobileBtn ? mobileBtn.querySelector('span') : null;
      const originalMobileText = mobileBtnSpan ? mobileBtnSpan.innerText : "";

      if (btn) {
        btn.disabled = true;
        text.innerText = "Saving...";
        spinner.classList.remove('hidden');
      }

      if (mobileBtn) {
        mobileBtn.disabled = true;
        mobileBtn.classList.add('opacity-70');
        if (mobileBtnSpan) mobileBtnSpan.innerText = "Saving...";
      }
      
      try {
        const formData = new FormData(form);
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
          }
        });
        
        const result = await response.json();
        if (response.ok && result.success) {
          if (window.isNewProfile) {
            window.trackEvent('signup_completed');
            window.isNewProfile = false;
          }
          toast.classList.remove('hidden');
          toast.classList.add('animate-bounce');
          setTimeout(() => {
            toast.classList.add('hidden');
            toast.classList.remove('animate-bounce');
          }, 3000);
        } else {
          alert("Error saving Profile.");
        }
      } catch (error) {
        console.error("Save failed:", error);
      } finally {
        if (btn) {
          btn.disabled = false;
          text.innerText = originalText;
          spinner.classList.add('hidden');
          btn.blur();
        }

        if (mobileBtn) {
          mobileBtn.disabled = false;
          mobileBtn.classList.remove('opacity-70');
          if (mobileBtnSpan) mobileBtnSpan.innerText = originalMobileText;
          mobileBtn.blur();
        }
      }
    });
  });
</script>

