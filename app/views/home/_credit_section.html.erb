<div id="creditGroup" class="hidden dynamic-section space-y-3 animate-in fade-in slide-in-from-bottom-2 duration-500 rounded-2xl px-3 py-3 border-2 border-dashed" data-protected="credit" style="background-color: rgba(231, 0, 11, 0.08); border-color: rgba(231, 0, 11, 0.15);">
  <header class="flex justify-between items-center group border-b-2 border-black pb-1">
    <div class="flex items-center">
      <svg class="h-4 w-4 mr-2" style="color: #E7000B;">
        <use xlink:href="#icon-credit"></use>
      </svg>
      <span class="text-base font-black uppercase tracking-widest section-title" style="color: #E7000B;"><%= t('credits_title', default: t('credit')) %></span>
    </div>
    <div class="flex gap-2 mb-1 shrink-0">
      <button type="button" onclick="addCreditItem('creditItemsContainer')"
              class="text-white w-7 h-7 rounded-full flex items-center justify-center shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] active:shadow-none active:translate-x-[1px] active:translate-y-[1px] active:scale-95 transition-all"
              style="background-color: #E7000B;" title="Add Credit Item">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
        </svg>
      </button>
      <button type="button" onclick="removeCreditSection()"
              class="bg-black text-white w-7 h-7 rounded-full flex items-center justify-center shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] active:shadow-none active:translate-x-[1px] active:translate-y-[1px] active:scale-95 hover:bg-gray-800 transition-all" title="Remove Credit">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      </button>
    </div>
  </header>

  <div id="creditItemsContainer" class="pt-2"></div>
</div>
