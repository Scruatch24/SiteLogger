<footer class="site-footer" data-nosnippet>
  <!-- Animated Background -->
  <div class="site-footer-bg"></div>
  <div class="site-footer-grid"></div>

  <!-- Particles -->
  <% 10.times do |i| %>
    <div class="site-footer-particle" style="left:<%= rand(5..95) %>%; bottom:-2%; animation-duration:<%= rand(8..16) %>s; animation-delay:<%= (rand(0..60) / 10.0) %>s; width:<%= rand(1..3) %>px; height:<%= rand(1..3) %>px; opacity:<%= rand(2..5) / 10.0 %>;"></div>
  <% end %>

  <div class="site-footer-inner">
    <!-- Column 1: Brand -->
    <div class="site-footer-col site-footer-brand">
      <a href="/" class="site-footer-logo">
        <div class="site-footer-logo-icon">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 7h6" />
          </svg>
        </div>
        <span class="site-footer-logo-text">TALK<span style="color: #f97316;">INVOICE</span></span>
      </a>
      <p class="site-footer-slogan"><%= t('footer.slogan') %></p>
      <p class="site-footer-copy">&copy; <%= Date.today.year %> TalkInvoice. <%= t('footer.rights') %></p>
    </div>

    <!-- Column 2: Legal -->
    <div class="site-footer-col">
      <h4 class="site-footer-heading"><%= t('footer.legal') %></h4>
      <ul class="site-footer-links">
        <li><%= link_to t('footer.terms'), terms_path %></li>
        <li><%= link_to t('footer.privacy'), privacy_path %></li>
        <li><%= link_to t('footer.refund'), refund_path %></li>
      </ul>
    </div>

    <!-- Column 3: Contact -->
    <div class="site-footer-col">
      <h4 class="site-footer-heading"><%= t('footer.contact') %></h4>
      <ul class="site-footer-links">
        <li><%= link_to t('footer.contact'), contact_path %></li>
        <li>
          <span class="site-footer-email-label"><%= t('footer.email_label') %>:</span>
          <a href="mailto:contact@talkinvoice.online" class="site-footer-email">contact@talkinvoice.online</a>
        </li>
      </ul>
    </div>
  </div>
</footer>
