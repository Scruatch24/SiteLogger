<div id="refinementSection" class="hidden mt-8 space-y-3 animate-in fade-in slide-in-from-bottom-2 duration-300 overflow-visible p-1">
  <button type="button" onclick="toggleSection('refinementContent', 'refinementArrow', this)" class="section-toggle-btn flex items-center justify-between w-full bg-emerald-50 border-2 border-black rounded-xl px-4 py-3 shadow-[4px_4px_0px_0px_rgba(16,185,129,1)] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all outline-none group hover:bg-emerald-100">
    <span class="<%= I18n.locale == :ka ? 'text-sm' : 'text-[10px]' %> font-black text-emerald-800 uppercase tracking-widest"><%= t('change_details') %></span>
    <div class="w-7 h-7 rounded-lg bg-emerald-500 border-2 border-black flex items-center justify-center shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] group-hover:bg-emerald-600 transition-colors">
      <svg id="refinementArrow" class="h-3.5 w-3.5 text-white transition-transform duration-300 -rotate-90" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="4"><path d="M19 9l-7 7-7-7" /></svg>
    </div>
  </button>
  
  <div id="refinementContent" class="hidden pt-1 pb-4 space-y-4 transition-all duration-300">
    <div id="refinementInputContainer" class="flex gap-2">
      <div class="flex-1 border-2 border-black rounded-xl bg-white shadow-[3px_3px_0px_0px_rgba(0,0,0,0.05),4px_4px_0px_0px_rgba(16,185,129,1)] flex flex-col">
        <textarea id="refinementInput"
                  rows="2"
                  oninput="autoResize(this); updateDynamicCountersCheck(this)"
                  class="w-full bg-transparent border-none text-sm font-bold text-black focus:ring-0 p-4 outline-none placeholder:text-gray-400 resize-none rounded-xl custom-scrollbar refinement-scrollbar"
                  style="max-height: 12rem; overflow-y: hidden;"
                  placeholder="<%= t('refinement_placeholder') %>"
                  onkeydown="if(event.key==='Enter' && !event.shiftKey) { event.preventDefault(); submitRefinement(); }"></textarea>
        <div class="flex justify-end px-3 pb-2">
          <span class="text-[9px] font-black text-gray-400 uppercase tracking-widest">
             <span id="refinementCharCount">0</span> / <span id="refinementMax"><%= @profile.char_limit %></span>
          </span>
       </div>
      </div>
      <div class="flex flex-col gap-2">
        <button type="button" 
                id="refinementMicBtn"
                onclick="startRefinementRecording()"
                class="w-11 h-11 rounded-xl bg-emerald-500 border-2 border-black flex items-center justify-center shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] active:shadow-none active:translate-x-[1px] active:translate-y-[1px] transition-all hover:bg-emerald-600"
                title="Speak instructions">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
          </svg>
        </button>
        <div id="refinementTimer" class="h-auto flex flex-col items-center justify-center hidden -mt-1 scale-90">
          <span class="text-[8px] font-black text-emerald-600 uppercase tracking-tighter leading-none">
            <span id="refinementTimeLeft">0</span>s
          </span>
          <span class="text-[7px] font-black text-gray-400 uppercase tracking-tighter leading-none"><%= t('left') %></span>
        </div>
        <button type="button" 
                id="refinementSendBtn"
                onclick="submitRefinement()"
                class="w-11 h-11 rounded-xl bg-emerald-500 border-2 border-black flex items-center justify-center shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] active:shadow-none active:translate-x-[1px] active:translate-y-[1px] transition-all hover:bg-emerald-600"
                title="Apply changes">
          <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>
