<div class="flex justify-end items-center pt-4 pb-2">
  <div class="flex items-center gap-2">
    <div class="flex flex-col justify-center text-right">
      <span class="text-[9px] font-bold text-gray-400 uppercase tracking-widest leading-none translate-y-[-1px]"><%= t('due_date') %></span>
      <div id="dueDateDisplay" class="text-xs font-black text-black leading-none mt-0.5 flex items-baseline justify-end">
        <% initial_due = Time.now + 14.days %>
        <span id="dueDateValue" class="leading-none"><%= l(initial_due, format: :long) %></span>
        <span id="dueDaysLabel" class="text-[12px] font-bold text-gray-400 ml-[2px] leading-none whitespace-nowrap"><%= t('in_x_days', count: 14) %></span>
      </div>
    </div>
    <div class="relative" data-popup-container>
    <button type="button" onclick="toggleCalendar(this)" class="w-8 h-8 border-2 border-black rounded-lg bg-white btn-icon-hover transition-all flex items-center justify-center group flex-shrink-0 active:scale-95 shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] active:shadow-none active:translate-x-[1px] active:translate-y-[1px]">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </button>
    <!-- Calendar Popup -->
    <div id="calendarPopup" data-nosnippet class="hidden absolute bottom-full right-0 mb-2 bg-white border-2 border-black rounded-xl z-[100] p-4 min-w-[280px]">
      <div class="flex justify-between items-center mb-3">
        <button type="button" onclick="changeCalendarMonth(-1)" class="w-8 h-8 border-2 border-black rounded-lg md:hover:bg-orange-50 flex items-center justify-center font-black text-lg transition-all active:scale-95 active:translate-x-[1px] active:translate-y-[1px] shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] active:shadow-none bg-white leading-none pb-0.5 active:bg-orange-600 active:text-white">â€¹</button>
        <span id="calendarMonthYear" class="text-sm font-black uppercase tracking-widest text-black"></span>
        <button type="button" onclick="changeCalendarMonth(1)" class="w-8 h-8 border-2 border-black rounded-lg md:hover:bg-orange-50 flex items-center justify-center font-black text-lg transition-all active:scale-95 active:translate-x-[1px] active:translate-y-[1px] shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] active:shadow-none bg-white leading-none pb-0.5 active:bg-orange-600 active:text-white">â€º</button>
      </div>
      <div class="grid grid-cols-7 gap-1 mb-2">
        <% t('date.abbr_day_names').each do |day| %>
          <span class="text-[9px] font-bold text-gray-400 text-center"><%= day.upcase %></span>
        <% end %>
      </div>
      <div id="calendarDays" class="grid grid-cols-7 gap-1"></div>
      <div class="flex gap-2 mt-3 pt-3 border-t-2 border-dashed border-gray-200">
        <button type="button" data-net="7" onclick="setQuickDue(7)" class="net-btn flex-1 py-2 border-2 border-black rounded-lg text-[9px] font-black uppercase md:hover:bg-orange-50 transition-all active:scale-95 active:translate-x-[1px] active:translate-y-[1px] shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] active:shadow-none bg-white active:bg-orange-600 active:text-white">Net 7</button>
        <button type="button" data-net="14" onclick="setQuickDue(14)" class="net-btn flex-1 py-2 border-2 border-black rounded-lg text-[9px] font-black uppercase md:hover:bg-orange-50 transition-all active:scale-95 active:translate-x-[1px] active:translate-y-[1px] shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] active:shadow-none bg-white active:bg-orange-600 active:text-white">Net 14</button>
        <button type="button" data-net="30" onclick="setQuickDue(30)" class="net-btn flex-1 py-2 border-2 border-black rounded-lg text-[9px] font-black uppercase md:hover:bg-orange-50 transition-all active:scale-95 active:translate-x-[1px] active:translate-y-[1px] shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] active:shadow-none bg-white active:bg-orange-600 active:text-white">Net 30</button>
      </div>
    </div>
    </div>
  </div>
</div>
