<% profile = current_user.profile %>
<% paid_plan = profile&.paid? %>
<% has_subscription_history = profile&.ever_paid? %>
<% raw_status = profile&.paddle_subscription_status.to_s.downcase %>
<% status_active = raw_status.blank? ? paid_plan : %w[active trialing].include?(raw_status) %>
<% status_label = if status_active
  t('subscription_page.status_active')
elsif raw_status.present?
  t('subscription_page.status_inactive')
else
  t('subscription_page.status_unknown')
end %>
<% next_billing_value = if profile&.paddle_next_bill_at.present?
  l(profile.paddle_next_bill_at, format: :long)
elsif paid_plan
  t('subscription_page.no_scheduled_billing')
else
  t('subscription_page.not_available')
end %>
<% show_manage_billing = paid_plan || has_subscription_history %>

<style>
  .subscription-page {
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: #0a0a0a;
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
  }

  /* Keep background language consistent with pricing page */
  .pricing-bg {
    position: fixed;
    inset: 0;
    background: radial-gradient(ellipse at 30% 20%, rgba(249,115,22,0.08) 0%, transparent 60%),
                radial-gradient(ellipse at 70% 80%, rgba(99,102,241,0.06) 0%, transparent 60%);
    pointer-events: none;
    z-index: 0;
  }

  .pricing-grid {
    position: fixed;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    pointer-events: none;
    z-index: 0;
  }

  .pricing-particle {
    position: fixed;
    background: rgba(249,115,22,0.4);
    border-radius: 50%;
    pointer-events: none;
    z-index: 0;
    animation: pricingFloat linear infinite;
  }

  @keyframes pricingFloat {
    0%   { transform: translateY(0) scale(1); opacity: 0; }
    10%  { opacity: 1; }
    90%  { opacity: 1; }
    100% { transform: translateY(-100vh) scale(0.5); opacity: 0; }
  }

  .subscription-content {
    position: relative;
    z-index: 1;
    max-width: 920px;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;
  }

  .pricing-back {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: rgba(255,255,255,0.3);
    font-size: 10px;
    font-weight: 800;
    text-transform: uppercase;
    text-decoration: none;
    padding: 12px 24px;
    border-radius: 14px;
    background: rgba(255,255,255,0.04);
    border: 1px solid rgba(255,255,255,0.06);
    transition: all 0.3s ease;
  }

  .pricing-back:hover {
    color: white;
    background: rgba(249,115,22,0.1);
    border-color: rgba(249,115,22,0.2);
  }

  .pricing-back svg {
    width: 14px;
    height: 14px;
  }

  .subscription-header {
    text-align: center;
    padding: 2rem 0 2.25rem;
  }

  .subscription-headline {
    font-size: clamp(2rem, 6vw, 3.3rem);
    font-weight: 900;
    color: white;
    text-transform: uppercase;
    line-height: 1.05;
    margin-bottom: 0.85rem;
    letter-spacing: 0;
  }

  .subscription-headline .onb-accent {
    color: #f97316;
  }

  .subscription-sub {
    font-size: 14px;
    color: rgba(255,255,255,0.45);
    font-weight: 500;
    max-width: 560px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .subscription-grid {
    display: grid;
    grid-template-columns: 1fr;
    max-width: 760px;
    margin: 0 auto;
  }

  .subscription-card {
    border-radius: 28px;
    padding: 1.5rem;
    border: 2px solid rgba(249,115,22,0.28);
    background: rgba(0,0,0,0.4);
    box-shadow: 0 18px 40px rgba(0,0,0,0.35);
    backdrop-filter: blur(8px);
  }

  .subscription-section + .subscription-section {
    margin-top: 1.2rem;
  }

  .subscription-divider {
    height: 1px;
    background: linear-gradient(90deg, rgba(249,115,22,0), rgba(249,115,22,0.45), rgba(249,115,22,0));
    margin: 1rem 0 0.4rem;
  }

  .subscription-card-title {
    font-size: 11px;
    font-weight: 900;
    text-transform: uppercase;
    color: #f97316;
    margin-bottom: 0.9rem;
    letter-spacing: 0;
  }

  .subscription-plan-pill {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    border-radius: 999px;
    border: 1px solid rgba(249,115,22,0.35);
    color: #fff7ed;
    padding: 6px 10px;
    font-size: 10px;
    font-weight: 900;
    text-transform: uppercase;
    margin-bottom: 0.9rem;
  }

  .subscription-status {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    border-radius: 999px;
    padding: 5px 10px;
    font-size: 10px;
    font-weight: 900;
    text-transform: uppercase;
    margin-bottom: 0.7rem;
  }

  .subscription-status.active {
    background: rgba(74,222,128,0.14);
    color: #4ade80;
    border: 1px solid rgba(74,222,128,0.35);
  }

  .subscription-status.inactive {
    background: rgba(239,68,68,0.15);
    color: #f87171;
    border: 1px solid rgba(239,68,68,0.35);
  }

  .subscription-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.75rem;
    border-top: 1px solid rgba(255,255,255,0.08);
    padding-top: 0.65rem;
    margin-top: 0.65rem;
  }

  .subscription-key {
    font-size: 10px;
    font-weight: 800;
    color: rgba(255,255,255,0.5);
    text-transform: uppercase;
  }

  .subscription-value {
    font-size: 11px;
    font-weight: 900;
    color: white;
    text-align: right;
    word-break: break-word;
  }

  .subscription-note {
    margin-top: 0.85rem;
    font-size: 11px;
    line-height: 1.5;
    color: rgba(255,255,255,0.62);
  }

  .subscription-tech {
    margin-top: 0.9rem;
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 14px;
    padding: 0.55rem 0.7rem;
    background: rgba(255,255,255,0.02);
  }

  .subscription-tech summary {
    cursor: pointer;
    list-style: none;
    font-size: 10px;
    text-transform: uppercase;
    font-weight: 800;
    color: rgba(255,255,255,0.62);
  }

  .subscription-tech summary::-webkit-details-marker {
    display: none;
  }

  .subscription-tech[open] summary {
    color: rgba(255,255,255,0.85);
    margin-bottom: 0.5rem;
  }

  .subscription-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.65rem;
    margin-top: 1rem;
  }

  .sub-btn-form {
    margin: 0;
    display: inline-flex;
  }

  .sub-btn {
    border-radius: 14px;
    border: 1px solid rgba(255,255,255,0.14);
    background: rgba(255,255,255,0.04);
    color: white;
    text-decoration: none;
    padding: 10px 14px;
    font-size: 10px;
    font-weight: 900;
    text-transform: uppercase;
    transition: all 0.25s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
  }

  .sub-btn:hover {
    border-color: rgba(249,115,22,0.35);
    background: rgba(249,115,22,0.12);
    color: white;
  }

  .sub-btn.primary {
    background: linear-gradient(to right, #f97316, #ea580c);
    border-color: transparent;
    box-shadow: 0 10px 22px rgba(249,115,22,0.28);
  }

  .sub-btn.disabled {
    opacity: 0.65;
    cursor: not-allowed;
  }

  @media (max-width: 780px) {
    .subscription-card {
      padding: 1.15rem;
    }

    .subscription-row {
      align-items: flex-start;
      flex-direction: column;
      gap: 0.4rem;
    }

    .subscription-value {
      text-align: left;
    }
  }
</style>

<div class="subscription-page">
  <div class="pricing-bg"></div>
  <div class="pricing-grid"></div>

  <% 12.times do %>
    <div class="pricing-particle" style="left:<%= rand(5..95) %>%; bottom:-2%; animation-duration:<%= rand(8..16) %>s; animation-delay:<%= (rand(0..60) / 10.0) %>s; width:<%= rand(1..3) %>px; height:<%= rand(1..3) %>px; opacity:<%= rand(2..5) / 10.0 %>;"></div>
  <% end %>

  <div class="subscription-content">
    <div style="margin-bottom: 1rem;">
      <%= link_to root_path, class: 'pricing-back' do %>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5"/><path d="m12 19-7-7 7-7"/>
        </svg>
        <%= t('subscription_page.back_home') %>
      <% end %>
    </div>

    <div class="subscription-header">
      <h1 class="subscription-headline"><%= raw t('subscription_page.title_html') %></h1>
      <p class="subscription-sub"><%= t('subscription_page.subtitle') %></p>
    </div>

    <div class="subscription-grid">
      <div class="subscription-card">
        <div class="subscription-section">
          <div class="subscription-card-title"><%= t('subscription_page.current_plan') %></div>

          <div class="subscription-plan-pill">
            <%= paid_plan ? t('subscription_page.plan_pro') : t('subscription_page.plan_free') %>
          </div>

          <div class="subscription-status <%= status_active ? 'active' : 'inactive' %>">
            <span>‚óè</span>
            <%= t('subscription_page.status') %>: <%= status_label %>
          </div>

          <% unless paid_plan %>
            <p class="subscription-note" style="margin-top:0.2rem;">
              <strong style="display:block; color:white;"><%= t('subscription_page.free_title') %></strong>
              <%= t('subscription_page.free_subtitle') %>
            </p>
          <% end %>
        </div>

        <div class="subscription-divider"></div>

        <div class="subscription-section">
          <div class="subscription-card-title"><%= t('subscription_page.manage_billing') %></div>

          <div class="subscription-row" style="border-top:none; margin-top:0; padding-top:0;">
            <span class="subscription-key"><%= t('subscription_page.next_billing') %></span>
            <span class="subscription-value"><%= next_billing_value %></span>
          </div>

          <div class="subscription-row">
            <span class="subscription-key"><%= t('subscription_page.customer_email') %></span>
            <span class="subscription-value"><%= profile&.paddle_customer_email.presence || current_user.email || t('subscription_page.not_available') %></span>
          </div>

          <% if profile&.paddle_next_bill_at.blank? %>
            <p class="subscription-note"><%= t('subscription_page.next_billing_hint') %></p>
          <% end %>

          <details class="subscription-tech">
            <summary><%= t('subscription_page.show_technical_details') %></summary>
            <div class="subscription-row" style="border-top:none; margin-top:0; padding-top:0;">
              <span class="subscription-key"><%= t('subscription_page.subscription_id') %></span>
              <span class="subscription-value"><%= profile&.paddle_subscription_id.presence || t('subscription_page.not_available') %></span>
            </div>
            <div class="subscription-row">
              <span class="subscription-key"><%= t('subscription_page.price_id') %></span>
              <span class="subscription-value"><%= profile&.paddle_price_id.presence || t('subscription_page.not_available') %></span>
            </div>
          </details>

          <div class="subscription-actions">
            <% if show_manage_billing %>
              <%= button_to t('subscription_page.manage_billing'), subscription_billing_portal_path, method: :post, class: 'sub-btn', form: { class: 'sub-btn-form' } %>
            <% end %>
            <% unless paid_plan %>
              <%= link_to checkout_path, class: 'sub-btn primary' do %>
                <%= t('subscription_page.upgrade_now') %>
              <% end %>
            <% end %>
            <%= link_to pricing_path, class: 'sub-btn' do %>
              <%= t('subscription_page.compare_plans') %>
            <% end %>
            <%= link_to contact_path, class: 'sub-btn' do %>
              <%= t('subscription_page.contact_support') %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
