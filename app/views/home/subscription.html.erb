<% profile = current_user.profile %>
<% paid_plan = profile&.paid? %>
<% has_subscription_history = profile&.ever_paid? %>
<% raw_status = profile&.paddle_subscription_status.to_s.downcase %>
<% status_active = raw_status.blank? ? paid_plan : %w[active trialing].include?(raw_status) %>
<% status_label = if status_active
  t('subscription_page.status_active')
elsif raw_status.present?
  t('subscription_page.status_inactive')
else
  t('subscription_page.status_unknown')
end %>
<% next_billing_value = if profile&.paddle_next_bill_at.present?
  l(profile.paddle_next_bill_at, format: :long)
elsif paid_plan
  t('subscription_page.no_scheduled_billing')
else
  t('subscription_page.not_available')
end %>
<% show_manage_billing = paid_plan || has_subscription_history %>
<% plan_label = paid_plan ? t('subscription_page.plan_pro') : t('subscription_page.plan_free') %>
<% billing_email = profile&.paddle_customer_email.presence || current_user.email || t('subscription_page.not_available') %>
<% subscription_reference = profile&.paddle_subscription_id.presence || t('subscription_page.not_available') %>
<% price_reference = profile&.paddle_price_id.presence || t('subscription_page.not_available') %>

<style>
  .subscription-page {
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: #0a0a0a;
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
  }

  /* Keep background language consistent with pricing page */
  .pricing-bg {
    position: fixed;
    inset: 0;
    background: radial-gradient(ellipse at 30% 20%, rgba(249,115,22,0.08) 0%, transparent 60%),
                radial-gradient(ellipse at 70% 80%, rgba(99,102,241,0.06) 0%, transparent 60%);
    pointer-events: none;
    z-index: 0;
  }

  .pricing-grid {
    position: fixed;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    pointer-events: none;
    z-index: 0;
  }

  .pricing-particle {
    position: fixed;
    background: rgba(249,115,22,0.4);
    border-radius: 50%;
    pointer-events: none;
    z-index: 0;
    animation: pricingFloat linear infinite;
  }

  @keyframes pricingFloat {
    0%   { transform: translateY(0) scale(1); opacity: 0; }
    10%  { opacity: 1; }
    90%  { opacity: 1; }
    100% { transform: translateY(-100vh) scale(0.5); opacity: 0; }
  }

  .subscription-content {
    position: relative;
    z-index: 1;
    max-width: 980px;
    margin: 0 auto;
    padding: 2.1rem 1.2rem 4rem;
    font-family: "Space Grotesk", "Sora", "Segoe UI", sans-serif;
    color: #f8fafc;
  }

  .sub-topbar {
    margin-bottom: 1.3rem;
  }

  .sub-back {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: rgba(255,255,255,0.72);
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    text-decoration: none;
    padding: 11px 16px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,0.18);
    background: rgba(9,9,11,0.52);
    transition: transform 0.2s ease, background 0.2s ease, color 0.2s ease;
  }

  .sub-back:hover {
    color: white;
    background: rgba(249,115,22,0.16);
    transform: translateX(-2px);
  }

  .sub-back svg {
    width: 13px;
    height: 13px;
  }

  .sub-hero {
    margin-bottom: 1.4rem;
  }

  .sub-kicker {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: rgba(255,255,255,0.58);
    margin-bottom: 0.55rem;
  }

  .sub-title {
    font-size: clamp(2rem, 5.3vw, 3.5rem);
    line-height: 0.98;
    letter-spacing: -0.01em;
    text-transform: uppercase;
    margin: 0;
    color: #f8fafc;
  }

  .sub-title .onb-accent {
    color: #f97316;
  }

  .sub-subtitle {
    margin: 0.9rem 0 0;
    max-width: 700px;
    font-size: 15px;
    color: rgba(255,255,255,0.7);
    line-height: 1.55;
  }

  .sub-panel {
    position: relative;
    border-radius: 34px;
    overflow: hidden;
    border: 1px solid rgba(255,255,255,0.16);
    background:
      radial-gradient(circle at 85% 12%, rgba(249,115,22,0.19), transparent 45%),
      radial-gradient(circle at 10% 80%, rgba(59,130,246,0.16), transparent 42%),
      rgba(4,6,12,0.82);
    box-shadow: 0 24px 64px rgba(0,0,0,0.48);
    backdrop-filter: blur(8px);
  }

  .sub-panel::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 34px;
    border: 1px solid rgba(249,115,22,0.24);
    pointer-events: none;
  }

  .sub-main {
    position: relative;
    z-index: 1;
    padding: 1.55rem;
  }

  .sub-main-top {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 0.8rem;
    align-items: center;
    margin-bottom: 1.2rem;
  }

  .sub-plan-pill {
    display: inline-flex;
    align-items: center;
    padding: 8px 14px;
    border-radius: 999px;
    font-size: 11px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #fff7ed;
    border: 1px solid rgba(249,115,22,0.45);
    background: rgba(249,115,22,0.18);
  }

  .sub-status {
    display: inline-flex;
    align-items: center;
    gap: 7px;
    border-radius: 999px;
    padding: 7px 12px;
    font-size: 11px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .sub-status::before {
    content: "";
    width: 7px;
    height: 7px;
    border-radius: 50%;
    background: currentColor;
    box-shadow: 0 0 12px currentColor;
  }

  .sub-status.active {
    color: #4ade80;
    border: 1px solid rgba(74,222,128,0.35);
    background: rgba(74,222,128,0.12);
  }

  .sub-status.inactive {
    color: #f87171;
    border: 1px solid rgba(248,113,113,0.36);
    background: rgba(248,113,113,0.12);
  }

  .sub-layout {
    display: grid;
    grid-template-columns: minmax(0, 1.15fr) minmax(0, 0.85fr);
    gap: 1rem;
  }

  .sub-column {
    background: rgba(255,255,255,0.03);
    border: 1px solid rgba(255,255,255,0.12);
    border-radius: 22px;
    padding: 1rem;
  }

  .sub-column-label {
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.11em;
    color: rgba(255,255,255,0.58);
    margin-bottom: 0.6rem;
  }

  .sub-info-card {
    border-radius: 16px;
    border: 1px solid rgba(255,255,255,0.09);
    background: rgba(255,255,255,0.03);
    padding: 0.8rem;
  }

  .sub-info-card + .sub-info-card {
    margin-top: 0.55rem;
  }

  .sub-key {
    font-size: 10px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255,255,255,0.52);
    margin-bottom: 0.35rem;
  }

  .sub-value {
    font-size: 14px;
    font-weight: 700;
    color: #f8fafc;
    line-height: 1.35;
    word-break: break-word;
  }

  .sub-note {
    margin-top: 0.75rem;
    font-size: 12px;
    line-height: 1.5;
    color: rgba(255,255,255,0.68);
  }

  .sub-note strong {
    color: #fff;
  }

  .sub-actions {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.55rem;
    margin-top: 0.75rem;
  }

  .sub-action-form {
    margin: 0;
  }

  .sub-action-btn {
    width: 100%;
    border-radius: 14px;
    border: 1px solid rgba(255,255,255,0.18);
    background: rgba(255,255,255,0.04);
    color: #f8fafc;
    text-decoration: none;
    padding: 10px 12px;
    font-size: 10px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.18s ease, border-color 0.18s ease, background 0.18s ease;
  }

  .sub-action-btn:hover {
    color: #fff;
    border-color: rgba(249,115,22,0.5);
    background: rgba(249,115,22,0.16);
    transform: translateY(-1px);
  }

  .sub-action-btn--primary {
    border-color: transparent;
    background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
    box-shadow: 0 12px 24px rgba(249,115,22,0.28);
  }

  .sub-tech {
    margin-top: 1rem;
    border-top: 1px dashed rgba(255,255,255,0.2);
    padding-top: 0.9rem;
  }

  .sub-tech summary {
    cursor: pointer;
    list-style: none;
    font-size: 10px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgba(255,255,255,0.65);
  }

  .sub-tech summary::-webkit-details-marker {
    display: none;
  }

  .sub-tech-grid {
    margin-top: 0.65rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.55rem;
  }

  .sub-tech-item {
    border-radius: 14px;
    border: 1px solid rgba(255,255,255,0.12);
    background: rgba(255,255,255,0.02);
    padding: 0.65rem;
  }

  @media (max-width: 900px) {
    .sub-layout {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 680px) {
    .subscription-content {
      padding: 1.6rem 0.85rem 3.3rem;
    }

    .sub-main {
      padding: 1rem;
    }

    .sub-title {
      font-size: clamp(1.8rem, 8vw, 2.4rem);
    }

    .sub-actions,
    .sub-tech-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="subscription-page">
  <div class="pricing-bg"></div>
  <div class="pricing-grid"></div>

  <% 12.times do %>
    <div class="pricing-particle" style="left:<%= rand(5..95) %>%; bottom:-2%; animation-duration:<%= rand(8..16) %>s; animation-delay:<%= (rand(0..60) / 10.0) %>s; width:<%= rand(1..3) %>px; height:<%= rand(1..3) %>px; opacity:<%= rand(2..5) / 10.0 %>;"></div>
  <% end %>

  <div class="subscription-content">
    <div class="sub-topbar">
      <%= link_to root_path, class: 'sub-back' do %>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5"/><path d="m12 19-7-7 7-7"/>
        </svg>
        <%= t('subscription_page.back_home') %>
      <% end %>
    </div>

    <div class="sub-hero">
      <div class="sub-kicker"><%= t('subscription_page.manage_billing') %></div>
      <h1 class="sub-title"><%= raw t('subscription_page.title_html') %></h1>
      <p class="sub-subtitle"><%= t('subscription_page.subtitle') %></p>
    </div>

    <section class="sub-panel">
      <div class="sub-main">
        <div class="sub-main-top">
          <div class="sub-plan-pill"><%= plan_label %></div>
          <div class="sub-status <%= status_active ? 'active' : 'inactive' %>">
            <%= t('subscription_page.status') %>: <%= status_label %>
          </div>
        </div>

        <div class="sub-layout">
          <div class="sub-column">
            <div class="sub-column-label"><%= t('subscription_page.current_plan') %></div>

            <article class="sub-info-card">
              <div class="sub-key"><%= t('subscription_page.next_billing') %></div>
              <div class="sub-value"><%= next_billing_value %></div>
            </article>

            <article class="sub-info-card">
              <div class="sub-key"><%= t('subscription_page.customer_email') %></div>
              <div class="sub-value"><%= billing_email %></div>
            </article>

            <% if profile&.paddle_next_bill_at.blank? %>
              <p class="sub-note"><%= t('subscription_page.next_billing_hint') %></p>
            <% end %>

            <% unless paid_plan %>
              <p class="sub-note">
                <strong><%= t('subscription_page.free_title') %></strong><br>
                <%= t('subscription_page.free_subtitle') %>
              </p>
            <% end %>
          </div>

          <div class="sub-column">
            <div class="sub-column-label"><%= t('subscription_page.manage_billing') %></div>

            <div class="sub-actions">
              <% if show_manage_billing %>
                <%= button_to t('subscription_page.manage_billing'), subscription_billing_portal_path, method: :post, class: 'sub-action-btn', form: { class: 'sub-action-form' } %>
              <% end %>
              <% unless paid_plan %>
                <%= link_to checkout_path, class: 'sub-action-btn sub-action-btn--primary' do %>
                  <%= t('subscription_page.upgrade_now') %>
                <% end %>
              <% end %>
              <%= link_to pricing_path, class: 'sub-action-btn' do %>
                <%= t('subscription_page.compare_plans') %>
              <% end %>
              <%= link_to contact_path, class: 'sub-action-btn' do %>
                <%= t('subscription_page.contact_support') %>
              <% end %>
            </div>
          </div>
        </div>

        <details class="sub-tech">
          <summary><%= t('subscription_page.show_technical_details') %></summary>
          <div class="sub-tech-grid">
            <div class="sub-tech-item">
              <div class="sub-key"><%= t('subscription_page.subscription_id') %></div>
              <div class="sub-value"><%= subscription_reference %></div>
            </div>
            <div class="sub-tech-item">
              <div class="sub-key"><%= t('subscription_page.price_id') %></div>
              <div class="sub-value"><%= price_reference %></div>
            </div>
          </div>
        </details>
      </div>
    </section>
  </div>
</div>
