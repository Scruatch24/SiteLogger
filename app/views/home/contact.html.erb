<div class="contact-page">
  <div class="contact-icon-box">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-orange-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>
  </div>
  <h1 class="contact-title"><%= t('contact_page.title') %></h1>
  <p class="contact-subtitle"><%= t('contact_page.subtitle') %></p>

  <div class="contact-card">
    <%= form_tag send_contact_path, method: :post, class: "contact-form" do %>
      <div class="space-y-4">
        <div class="text-left">
          <label class="text-[12px] font-black text-black uppercase tracking-widest ml-1"><%= t('contact_page.your_email') %></label>
          <input type="email" name="email" required placeholder="<%= t('contact_page.email_placeholder') %>" class="w-full bg-white border-2 border-black rounded-xl py-3 px-4 text-sm font-bold text-black focus:border-orange-500 focus:shadow-[4px_4px_0px_0px_#F97316] outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all mt-1" />
        </div>

        <div class="text-left">
          <label class="text-[12px] font-black text-black uppercase tracking-widest ml-1"><%= t('contact_page.subject_label') %></label>
          <input type="text" name="subject" required placeholder="<%= t('contact_page.subject_placeholder') %>" class="w-full bg-white border-2 border-black rounded-xl py-3 px-4 text-sm font-bold text-black focus:border-orange-500 focus:shadow-[4px_4px_0px_0px_#F97316] outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all mt-1" />
        </div>

        <div class="text-left">
          <label class="text-[12px] font-black text-black uppercase tracking-widest ml-1"><%= t('contact_page.description_label') %></label>
          <textarea name="description" required rows="5" placeholder="<%= t('contact_page.description_placeholder') %>" class="w-full bg-white border-2 border-black rounded-xl py-3 px-4 text-sm font-bold text-black focus:border-orange-500 focus:shadow-[4px_4px_0px_0px_#F97316] outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all mt-1 resize-none"></textarea>
        </div>

        <button type="submit" class="contact-email-link w-full justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <%= t('contact_page.send_message') %>
        </button>
      </div>
    <% end %>
    <p class="contact-response-time" style="margin-top: 1rem;"><%= t('contact_page.response_time') %></p>
  </div>
</div>
