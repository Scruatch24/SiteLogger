    <style>
      /* Global Prevent Auto-Zoom on Focus (iOS) and Double-Tap Zoom */
      @media (max-width: 767px) {
        input, textarea, select {
          font-size: 16px !important;
        }
        html {
          background-color: #ffffff; /* Match app background to hide flashes */
          overscroll-behavior-y: none; 
          overflow-x: hidden;
        }
        body {
          touch-action: pan-y; /* Prevent horizontal swaying */
          overflow-x: hidden;
          max-width: 100%;
          -webkit-overflow-scrolling: touch;
        }
      }
      
      @keyframes logout-slide {
        0%, 100% { transform: translateX(0); }
        50% { transform: translateX(5px); }
      }
      .animate-logout {
        animation: logout-slide 1.5s ease-in-out infinite;
      }

      /* ---------------------------------------------------- */
      /* NEW: Smooth High-FPS Modal Animation & Electric Border */
      /* ---------------------------------------------------- */
      
      /* 1. Smooth, hardware-accelerated entrance */
      @keyframes smoothPop {
        0% { 
          opacity: 0;
          transform: scale(0.92) translate3d(0, 10px, 0);
          filter: blur(4px);
        }
        100% { 
          opacity: 1; 
          transform: scale(1) translate3d(0, 0, 0);
          filter: blur(0);
        }
      }

      .modal-smooth-enter {
        animation: smoothPop 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        will-change: transform, opacity, filter;
        backface-visibility: hidden; /* Reduces shifting */
      }

      /* 2. Electric Border Container */
      .electric-border-container {
        position: relative;
        border-radius: 24px; /* Default smaller for mobile */
        isolation: isolate;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.7);
        padding: 2px;
        background: transparent;
        overflow: hidden;
      }
      
      @media (min-width: 768px) {
        .electric-border-container {
          border-radius: 40px; /* Larger for desktop */
        }
      }

      /* The rotating gradient */
      .electric-border-container::before {
        content: "";
        position: absolute;
        inset: -150%; /* Larger inset for mobile to smooth out the gradient edges */
        width: 400%;  /* Much larger to center the gradient better */
        height: 400%;
        background: conic-gradient(
          transparent, 
          transparent, 
          transparent, 
          #FF6B00 30%, 
          #FFB800 50%, 
          #FF6B00 70%, 
          transparent, 
          transparent,
          transparent
        );
        animation: rotateElectric 2.5s linear infinite;
        transform-origin: center;
        z-index: -1;
        opacity: 0.5; /* Reduced intensity for mobile */
        filter: blur(20px); /* Soften the edges */
      }

      @media (min-width: 768px) {
        .electric-border-container::before {
          inset: -50%;
          width: 200%;
          height: 200%;
          opacity: 1;
          filter: none;
        }
      }

      /* Inner background */
      .electric-border-content {
        background: #000000; /* Solid black on mobile to hide center hub */
        backdrop-filter: blur(24px);
        border-radius: 22px; /* Matches container-2px */
        height: 100%;
        width: 100%;
        position: relative;
        z-index: 1;
      }
      
      @media (min-width: 768px) {
        .electric-border-content {
          background: rgba(0, 0, 0, 0.85); /* Restore transparency on desktop */
          border-radius: 38px;
        }
      }

      @keyframes rotateElectric {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }

      /* 3. The Zenith Trace (Ultra-Premium Inline Box) */
      .zenith-container {
        position: relative;
        overflow: hidden;
        background: #050505;
        isolation: isolate;
        border: 1px solid rgba(255, 255, 255, 0.05);
        box-shadow: 
          0 10px 30px -10px rgba(0, 0, 0, 0.5),
          0 0 0 1px rgba(255, 255, 255, 0.03) inset;
      }
      
      /* The "Laser" Spark */
      .zenith-trace {
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 10;
      }

      .zenith-trace svg {
        width: 100%;
        height: 100%;
        fill: none;
      }

      .zenith-trace rect {
        width: 100%;
        height: 100%;
        stroke: #f97316;
        stroke-width: 2;
        stroke-dasharray: 60 1000; /* Short energy burst */
        stroke-dashoffset: 0;
        animation: zenith-spark 3s linear infinite;
        filter: drop-shadow(0 0 4px #f97316) drop-shadow(0 0 1px #fff);
      }

      @keyframes zenith-spark {
        from { stroke-dashoffset: 0; }
        to { stroke-dashoffset: -1060; } /* Matches a typical path length ratio */
      }

      /* Moving Mesh Background */
      .zenith-bg {
        position: absolute;
        inset: 0;
        opacity: 0.4;
        background: 
          radial-gradient(circle at 0% 0%, #1a1a1a 0%, transparent 50%),
          radial-gradient(circle at 100% 100%, #111111 0%, transparent 50%),
          radial-gradient(circle at 50% 50%, #1a1005 0%, transparent 50%);
        filter: blur(40px);
        animation: zenith-bg-shift 10s ease-in-out infinite alternate;
        z-index: -1;
      }

      @keyframes zenith-bg-shift {
        0% { transform: scale(1) translate(0, 0); }
        100% { transform: scale(1.2) translate(-5%, -5%); }
      }

      /* Grid Texture Overlay */
      .zenith-grid {
        position: absolute;
        inset: 0;
        background-image: 
          linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px),
          linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px);
        background-size: 20px 20px;
        z-index: 0;
        opacity: 0.5;
        mask-image: radial-gradient(circle at center, black, transparent 80%);
      }

      .zenith-content {
        position: relative;
        z-index: 2;
        background: transparent;
      }
    </style>

    <script>
      // Ensure tracking session ID exists
      if (!sessionStorage.getItem('tracking_session_id')) {
          sessionStorage.setItem('tracking_session_id', 'sess_' + Math.random().toString(36).substr(2, 9) + '_' + Date.now());
      }
      
      let lastPremiumShowTime = 0;

      window.showPremiumModal = () => {
          const now = Date.now();
          // Only show if at least 1 minute (60,000ms) has passed since last show
          if (now - lastPremiumShowTime < 60000) return;

          const modal = document.getElementById('premiumTierModal');
          if (modal) {
              modal.classList.remove('hidden');
              modal.classList.add('flex');
              // Prevent background scrolling
              document.body.classList.add('overflow-hidden', 'touch-none');
              document.documentElement.classList.add('overflow-hidden');
              lastPremiumShowTime = now;
          }
      };

      window.closePremiumModal = () => {
          const modal = document.getElementById('premiumTierModal');
          if (modal) {
              modal.classList.add('hidden');
              modal.classList.remove('flex');
              // Restore background scrolling
              document.body.classList.remove('overflow-hidden', 'touch-none');
              document.documentElement.classList.remove('overflow-hidden');
          }
      };

      window.trackEvent = async (eventName, userId = null, sessionId = null, targetId = null) => {
          try {
              const response = await fetch('/track', {
                  method: 'POST',
                  headers: { 
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
                  },
                  body: JSON.stringify({
                      event_name: eventName,
                      user_id: userId,
                      session_id: sessionId || sessionStorage.getItem('tracking_session_id') || ('sess_' + Math.random().toString(36).substr(2, 9)),
                      target_id: targetId
                  })
              });

              if (response.status === 429) {
                  // Ignore limit modal on history page for downloads/exports as per user request
                  if (!(eventName === 'invoice_exported' && window.location.pathname.includes('/history'))) {
                      window.showPremiumModal();
                  }
                  return false;
              }

              const data = await response.json();
              if (data.status === 'error' && data.message === 'Rate limit reached') {
                  if (!(eventName === 'invoice_exported' && window.location.pathname.includes('/history'))) {
                      window.showPremiumModal();
                  }
                  return false;
              }
              return response.ok;
          } catch (e) {
              console.error('Tracking failed:', e);
              return true;
          }
      };
    </script>
