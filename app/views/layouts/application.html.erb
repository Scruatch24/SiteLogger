      .modal-smooth-enter {
        animation: smoothPop 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        will-change: transform, opacity, filter;
        backface-visibility: hidden; /* Reduces shifting */
      }

      /* 2. Electric Border Container */
      .electric-border-container {
        position: relative;
        border-radius: 24px; /* Default smaller for mobile */
        isolation: isolate;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.7);
        padding: 2px;
        background: transparent;
        overflow: hidden;
      }
      
      @media (min-width: 768px) {
        .electric-border-container {
          border-radius: 40px; /* Larger for desktop */
        }
      }

      /* The rotating gradient */
      .electric-border-container::before {
        content: "";
        position: absolute;
        inset: -150%; /* Larger inset for mobile to smooth out the gradient edges */
        width: 400%;  /* Much larger to center the gradient better */
        height: 400%;
        background: conic-gradient(
          transparent, 
          transparent, 
          transparent, 
          #FF6B00 30%, 
          #FFB800 50%, 
          #FF6B00 70%, 
          transparent, 
          transparent,
          transparent
        );
        animation: rotateElectric 2.5s linear infinite;
        transform-origin: center;
        z-index: -1;
        opacity: 0.5; /* Reduced intensity for mobile */
        filter: blur(20px); /* Soften the edges */
      }

      @media (min-width: 768px) {
        .electric-border-container::before {
          inset: -50%;
          width: 200%;
          height: 200%;
          opacity: 1;
          filter: none;
        }
      }

      /* Inner background */
      .electric-border-content {
        background: #000000; /* Solid black on mobile to hide center hub */
        backdrop-filter: blur(24px);
        border-radius: 22px; /* Matches container-2px */
        height: 100%;
        width: 100%;
        position: relative;
        z-index: 1;
      }
      
      @media (min-width: 768px) {
        .electric-border-content {
          background: rgba(0, 0, 0, 0.85); /* Restore transparency on desktop */
          border-radius: 38px;
        }
      }

      @keyframes rotateElectric {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }

      /* 3. The Zenith Trace (Ultra-Premium Inline Box) */
      .zenith-container {
        position: relative;
        overflow: hidden;
        background: #050505;
        isolation: isolate;
        border: 1px solid rgba(255, 255, 255, 0.05);
        box-shadow: 
          0 10px 30px -10px rgba(0, 0, 0, 0.5),
          0 0 0 1px rgba(255, 255, 255, 0.03) inset;
      }
      
      /* The "Laser" Spark */
      .zenith-trace {
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 10;
      }

      .zenith-trace svg {
        width: 100%;
        height: 100%;
        fill: none;
      }

      .zenith-trace rect {
        width: 100%;
        height: 100%;
        stroke: #f97316;
        stroke-width: 3;
        filter: drop-shadow(0 0 4px #f97316) drop-shadow(0 0 1px #fff);
        animation: zenith-pulse 2.5s ease-in-out infinite;
      }

      @keyframes zenith-pulse {
        0%, 100% { opacity: 0.3; filter: drop-shadow(0 0 2px #f97316); }
        50% { opacity: 1; filter: drop-shadow(0 0 8px #f97316) drop-shadow(0 0 2px #fff); }
      }

      /* Moving Mesh Background */
      .zenith-bg {
        position: absolute;
        inset: 0;
        opacity: 0.4;
        background: 
          radial-gradient(circle at 0% 0%, #1a1a1a 0%, transparent 50%),
          radial-gradient(circle at 100% 100%, #111111 0%, transparent 50%),
