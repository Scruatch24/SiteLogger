                    <div class="w-8 h-8 rounded-xl bg-orange-500 text-white flex items-center justify-center shrink-0 shadow-lg shadow-orange-500/20">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 17a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-1" />
                        <path d="m12 15 4-4m-4 4-4-4m4 4V4" />
                      </svg>
                    </div>
                    <span class="text-[9px] font-black text-orange-600 uppercase tracking-widest">Exports</span>
                  </div>
                  <span class="text-[10px] font-black text-black uppercase tracking-tight">5 Per Day</span>
                </div>

                <!-- Access Status -->
                <div class="flex items-center justify-center gap-3 pt-2">
                  <div class="w-5 h-5 rounded-full bg-emerald-500 text-white flex items-center justify-center shrink-0 shadow-lg shadow-emerald-500/20">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M5 13l4 4L19 7" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/></svg>
                  </div>
                  <span class="text-[10px] font-black text-emerald-600 uppercase tracking-widest">Full Platform Access</span>
                </div>
              </div>

               <div class="relative mt-8">
                <%= link_to new_user_registration_path, class: "group/btn block w-full py-4 bg-black text-white rounded-2xl text-[10px] font-black uppercase text-center transition-all hover:bg-orange-600 hover:scale-[1.02] shadow-[0_10px_20px_rgba(0,0,0,0.1)] active:scale-95 flex items-center justify-center gap-2" do %>
                  Signup for Free
                  <svg class="w-3 h-3 group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M14 5l7 7m0 0l-7 7m7-7H3" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/></svg>
                <% end %>
              </div>
            </div>

            <!-- Column 3: PRO (Luxury Industrial) -->
            <div class="group relative flex flex-col p-6 rounded-[32px] bg-black/40 border-2 border-orange-500 shadow-[0_0_30px_rgba(249,115,22,0.2)] transition-all hover:bg-black/60 backdrop-blur-sm overflow-hidden ring-1 ring-orange-500/50">
               <div class="absolute inset-0 bg-gradient-to-br from-orange-500/10 to-transparent pointer-events-none"></div>
               
               <div class="relative space-y-1 mb-8">
                <div class="flex items-center justify-between">
                  <span class="text-[10px] font-black uppercase tracking-widest text-orange-500">Professional</span>
                  <span class="bg-orange-500 text-white text-[8px] font-black px-2 py-0.5 rounded-full uppercase tracking-tighter">ELITE</span>
                </div>
                <h3 class="text-2xl font-black italic tracking-tighter uppercase text-white">Pro Plan</h3>
              </div>
              
              <div class="relative space-y-3 flex-1">
                <!-- Preview Row -->
                <div class="flex items-center justify-between p-3 bg-orange-500/5 border border-orange-500/10 rounded-2xl">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-xl bg-orange-600/20 border border-orange-500/30 text-orange-500 flex items-center justify-center shrink-0">
                      <div class="w-full h-full flex items-center justify-center" style="animation: eyeBlink 4s infinite ease-in-out;">
                         <svg class="w-5 h-5 text-orange-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                            <!-- Almond Shape -->
                            <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z" />
                            <!-- Pupil (Hollow) -->
                            <circle cx="12" cy="12" r="3" fill="none" stroke="currentColor" style="animation: eyeLook 4s infinite ease-in-out;" />
                         </svg>
                      </div>
                       <style>
                         /* 
                            Strict Sync: Total 4s.
                            0-2s: Active (50%)
                            2s-4s: Pause (50%)
                         */
                         @keyframes eyeLook {
                           0%, 10% { transform: translate(0, 0); }
                           15% { transform: translate(-3px, 0); } /* Move Left */
                           20% { transform: translate(-3px, 0); } /* Hold Left */
                           25% { transform: translate(3px, 0); }  /* Move Right */
                           30% { transform: translate(3px, 0); }  /* Hold Right */
                           35% { transform: translate(0, 0); }    /* Return Center */
                           100% { transform: translate(0, 0); }   /* Wait */
                         }
                         @keyframes eyeBlink {
                           0%, 40% { transform: scaleY(1); }
                           43% { transform: scaleY(0.1); }
                           46%, 100% { transform: scaleY(1); }
                         }
                       </style>
                    </div>
                    <span class="text-[9px] font-black text-orange-500 uppercase tracking-widest">Preview</span>
                  </div>
                  <span class="text-[10px] font-black text-green-400 uppercase italic">UNLIMITED</span>
                </div>

                <!-- Transcript Row -->
                <div class="flex items-center justify-between p-3 bg-orange-500/5 border border-orange-500/10 rounded-2xl">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-xl bg-orange-600/20 border border-orange-500/30 text-orange-500 flex items-center justify-center shrink-0 overflow-hidden">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <defs>
                          <clipPath id="transcriptClip">
                            <rect x="0" y="0" width="24" height="24" />
                          </clipPath>
                        </defs>
                        <g clip-path="url(#transcriptClip)">
                          <line x1="4" y1="6" x2="20" y2="6" stroke-width="2.5" stroke-linecap="round" style="animation: transcriptScrollPulse 4s infinite ease-in-out;"/>
                          <line x1="4" y1="12" x2="12" y2="12" stroke-width="2.5" stroke-linecap="round" style="animation: transcriptScrollPulse 4s infinite ease-in-out 0.2s;"/>
                          <line x1="4" y1="18" x2="20" y2="18" stroke-width="2.5" stroke-linecap="round" style="animation: transcriptScrollPulse 4s infinite ease-in-out 0.1s;"/>
                        </g>
                        <style>
                          @keyframes transcriptScrollPulse {
                            0% { transform: translateX(0); opacity: 1; }
                            15% { transform: translateX(-24px); opacity: 0; }
                            15.1% { transform: translateX(24px); opacity: 0; }
                            30% { transform: translateX(0); opacity: 1; }
                            50% { transform: translateX(0); opacity: 1; } /* End Active phase at 2s */
                            100% { transform: translateX(0); opacity: 1; } /* Wait 2s */
                          }
                        </style>
                      </svg>
                    </div>
                    <span class="text-[9px] font-black text-orange-500 uppercase tracking-widest">Transcript</span>
                  </div>
                  <span class="text-[10px] font-black text-orange-100 uppercase tracking-tighter">10,000 Chars</span>
                </div>

                <!-- Voice record Row -->
                <div class="flex items-center justify-between p-3 bg-orange-500/5 border border-orange-500/10 rounded-2xl">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-xl bg-orange-600/20 border border-orange-500/30 text-orange-500 flex items-center justify-center shrink-0 relative overflow-hidden">
                      <svg viewBox="-4 0 32 24" class="w-6 h-6 relative z-10" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z" />
                        <path d="M19 10v1a7 7 0 0 1-14 0v-1" />
                        <line x1="12" y1="18" x2="12" y2="22" />
                        <line x1="8" y1="22" x2="16" y2="22" />
                        <path class="wave-l-1" d="M7 3.5c-0.8 1-0.8 3 0 4" opacity="0" />
                        <path class="wave-l-2" d="M4 2c-1.2 1.2-1.2 4.5 0 6" opacity="0" />
                        <path class="wave-r-1" d="M17 3.5c0.8 1 0.8 3 0 4" opacity="0" />
                        <path class="wave-r-2" d="M20 2c1.2 1.2 1.2 4.5 0 6" opacity="0" />
                      </svg>
                      <style>
                        /* Active phase 0-50% (0-2s) */
                        .wave-l-1 { animation: waveLEffect 4s infinite; }
                        .wave-l-2 { animation: waveLEffect 4s infinite 0.4s; }
                        .wave-r-1 { animation: waveREffect 4s infinite; }
                        .wave-r-2 { animation: waveREffect 4s infinite 0.4s; }
                        @keyframes waveLEffect {
                          0% { opacity: 0; transform: translateX(1px); }
                          10% { opacity: 0.8; transform: translateX(0); }
                          20% { opacity: 0; transform: translateX(-1.5px); }
                          100% { opacity: 0; transform: translateX(-1.5px); }
                        }
                        @keyframes waveREffect {
                          0% { opacity: 0; transform: translateX(-1px); }
                          10% { opacity: 0.8; transform: translateX(0); }
                          20% { opacity: 0; transform: translateX(1.5px); }
                          100% { opacity: 0; transform: translateX(1.5px); }
                        }
                      </style>
                    </div>
                    <span class="text-[9px] font-black text-orange-500 uppercase tracking-widest">Voice</span>
                  </div>
                  <span class="text-[10px] font-black text-orange-100 uppercase tracking-tighter text-right">300 Seconds</span>
                </div>

                <!-- Exports Row -->
                <div class="flex items-center justify-between p-3 bg-orange-500/5 border border-orange-500/10 rounded-2xl">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-xl bg-orange-600/20 border border-orange-500/30 text-orange-500 flex items-center justify-center shrink-0 overflow-hidden relative">
                      <svg class="w-4 h-4 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <!-- Tray -->
                        <path d="M4 17a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-1" />
                        <!-- Animated Arrow -->
                        <path class="animate-export-arrow" d="m12 15 4-4m-4 4-4-4m4 4V4" style="animation: exportSlide 2s infinite ease-in-out;" />
                      </svg>
                      <style>
                        @keyframes exportSlide {
                          0% { transform: translateY(-4px); opacity: 0; }
                          10% { transform: translateY(0); opacity: 1; }   /* Appear */
                          40% { transform: translateY(0); opacity: 1; }   /* Hold */
                          50% { transform: translateY(8px); opacity: 0; } /* Drop out by 2s */
                          100% { transform: translateY(8px); opacity: 0; } /* Wait */
                        }
                      </style>
                    </div>
                    <span class="text-[9px] font-black text-orange-500 uppercase tracking-widest">Exports</span>
                  </div>
                  <span class="text-[10px] font-black text-green-400 uppercase italic">UNLIMITED</span>
                </div>

                <!-- AI Row -->
                <div class="flex items-center justify-center gap-3 pt-2">
                  <div class="w-5 h-5 rounded-lg bg-orange-600/20 border border-orange-500/30 text-orange-500 flex items-center justify-center shrink-0">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-3 h-3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                    </svg>
                  </div>
                  <span class="text-[10px] font-black text-orange-100 uppercase tracking-widest">Priority AI & Support</span>
                </div>
              </div>

               <div class="relative mt-8">
                <button class="w-full py-4 bg-white/5 border border-white/10 text-white/40 rounded-2xl text-[10px] font-black uppercase tracking-widest cursor-not-allowed italic">
                  Coming Soon
                </button>
              </div>
            </div>

          </div>
        </div>

        <!-- Footer: Clean Login & Dismiss -->
        <div class="relative p-5 md:p-8 border-t border-white/10 shrink-0 bg-black/20">
          <div class="flex flex-col md:flex-row items-center justify-between gap-4 md:gap-6">
            <div class="text-center md:text-left">
              <span class="block text-[10px] font-black uppercase text-gray-500 tracking-widest mb-0.5 md:mb-1">Already have a pro account?</span>
              <%= link_to new_user_session_path, class: "group text-xs font-black text-white hover:text-orange-500 transition-colors flex items-center gap-2 uppercase tracking-tighter" do %>
                Login to Profile
                <svg class="w-3 h-3 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M17 8l4 4m0 0l-4 4m4-4H3" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/></svg>
              <% end %>
            </div>
            <button onclick="closePremiumModal()" class="w-full md:w-auto px-12 py-3 md:py-5 bg-white/5 hover:bg-white/10 border border-white/20 rounded-2xl text-[10px] font-black uppercase text-white tracking-[0.2em] transition-all hover:scale-105 active:scale-95 shadow-xl">
              Keep Previewing
            </button>
          </div>
        </div>

      </div>
      </div>
    </div>
    <!-- Logout Confirmation Modal -->
    <div id="logoutConfirmationModal" class="fixed inset-0 z-[30000] hidden items-center justify-center p-4">
        <div class="absolute inset-0 bg-black/60 backdrop-blur-sm" onclick="closeLogoutModal()"></div>
        <div class="relative bg-white border-4 border-black rounded-[2.5rem] p-8 max-w-sm w-full shadow-[12px_12px_0px_0px_rgba(0,0,0,1)] animate-in fade-in zoom-in duration-200">
            <div class="flex flex-col items-center text-center space-y-6">
                <div class="w-16 h-16 bg-red-50 rounded-2xl flex items-center justify-center border-2 border-black animate-logout">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-8 h-8 text-red-600">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9" />
                    </svg>
                </div>
                <div class="space-y-2">
                    <h3 class="text-2xl font-black uppercase tracking-tighter italic">Logging Out?</h3>
                    <p class="text-xs font-bold text-gray-500 uppercase tracking-widest leading-relaxed">Are you sure you want to end your session?</p>
                </div>
                <div class="flex flex-col w-full gap-3">
                   <%= button_to destroy_user_session_path, method: :delete, class: "w-full py-4 bg-red-600 text-white rounded-2xl font-black uppercase text-xs tracking-[0.2em] shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] active:scale-[0.97] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all border-2 border-black hover:bg-red-700 hover:border-black" do %>
                      Yes, Log Out
                   <% end %>
                   <button type="button" onclick="closeLogoutModal()" class="w-full py-4 bg-white text-black rounded-2xl font-black uppercase text-xs tracking-[0.2em] shadow-[4px_4px_0px_0px_#000000] active:scale-[0.97] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all border-2 border-black hover:bg-gray-50">
                      Cancel
                   </button>
                </div>
            </div>
        </div>
    </div>

    <script>
      window.showLogoutModal = (e) => {
        if (e) e.preventDefault();
        const modal = document.getElementById('logoutConfirmationModal');
        if (modal) {
          modal.classList.remove('hidden');
          modal.classList.add('flex');
          document.body.classList.add('overflow-hidden');
        }
      };

      window.closeLogoutModal = () => {
        const modal = document.getElementById('logoutConfirmationModal');
        if (modal) {
          modal.classList.add('hidden');
          modal.classList.remove('flex');
          document.body.classList.remove('overflow-hidden');
        }
      };
    </script>
  </body>
</html>