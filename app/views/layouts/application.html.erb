    <script>
      function confirmPaddleCheckoutTransaction(transactionId, options) {
        if (!transactionId) return Promise.resolve(false);

        options = options || {};
        const maxAttempts = options.maxAttempts || 8;
        const initialDelayMs = options.initialDelayMs || 1200;

        const csrfMeta = document.querySelector('meta[name="csrf-token"]');
        const csrfToken = csrfMeta ? csrfMeta.getAttribute('content') : '';

        function runAttempt(attempt) {
          return fetch('<%= checkout_confirm_path %>', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': csrfToken
            },
            body: JSON.stringify({ transaction_id: transactionId })
          })
            .then(function(response) {
              return response.json().catch(function() { return { success: false }; }).then(function(body) {
                return { ok: response.ok, status: response.status, body: body || {} };
              });
            })
            .then(function(result) {
              if (result.ok && result.body && result.body.success) return true;

              const retryable = !!(result.body && result.body.retryable);
              if (!retryable || attempt >= maxAttempts) return false;

              const waitMs = initialDelayMs * Math.min(attempt, 4);
              return new Promise(function(resolve) {
                setTimeout(function() {
                  resolve(runAttempt(attempt + 1));
                }, waitMs);
              });
            })
            .catch(function(err) {
              console.warn('Paddle checkout confirmation failed', err);
              if (attempt >= maxAttempts) return false;
              const waitMs = initialDelayMs * Math.min(attempt, 4);
              return new Promise(function(resolve) {
                setTimeout(function() {
                  resolve(runAttempt(attempt + 1));
                }, waitMs);
              });
            });
        }

        return runAttempt(1);
      }

      document.addEventListener('DOMContentLoaded', function() {
        const isSignedIn = <%= user_signed_in? ? 'true' : 'false' %>;

        if (isSignedIn) {
          const params = new URLSearchParams(window.location.search);
          const txFromUrl = params.get('transaction_id') || params.get('transactionId');
          if (txFromUrl) {
            confirmPaddleCheckoutTransaction(txFromUrl).then(function(confirmed) {
              if (!confirmed) return;
              if (window.location.pathname !== '<%= subscription_path %>') {
                window.location.href = '<%= subscription_path %>?upgraded=1';
                return;
              }

              params.delete('transaction_id');
              params.delete('transactionId');
              const next = params.toString();
              const cleanUrl = window.location.pathname + (next ? ('?' + next) : '') + window.location.hash;
              window.history.replaceState({}, document.title, cleanUrl);
            });
          }
        }

        if (typeof Paddle === 'undefined') return;

        const paddleToken = '<%= ENV["PADDLE_CLIENT_TOKEN"].to_s %>';
        if (paddleToken.length === 0) {
          console.error('Paddle credentials missing: set PADDLE_CLIENT_TOKEN');
          return;
        }

        <% paddle_env = ENV["PADDLE_ENVIRONMENT"].presence || (Rails.env.production? ? "production" : "sandbox") %>
        <% if paddle_env == "sandbox" %>
          Paddle.Environment && Paddle.Environment.set('sandbox');
        <% end %>

        const initOptions = {
          token: paddleToken,
          eventCallback: function(event) {
            if (!isSignedIn || !event || event.name !== 'checkout.completed') return;

            const eventData = event.data || {};
            const transactionId = eventData.transaction_id || eventData.transactionId || eventData.id;
            if (!transactionId) return;

            confirmPaddleCheckoutTransaction(transactionId).then(function(confirmed) {
              if (confirmed) {
                window.location.href = '<%= subscription_path %>?upgraded=1';
              }
            });
          }
        };

        Paddle.Initialize(initOptions);
      });

      window.openPaddleCheckout = function() {
        window.location.href = '<%= checkout_path %>';
      };
    </script>

