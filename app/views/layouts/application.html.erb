    <script>
      // Ensure tracking session ID exists
      if (!sessionStorage.getItem('tracking_session_id')) {
          sessionStorage.setItem('tracking_session_id', 'sess_' + Math.random().toString(36).substr(2, 9) + '_' + Date.now());
      }
      
      let lastPremiumShowTime = 0;

      window.showPremiumModal = (force = false) => {
          const now = Date.now();
          // Only show if at least 1 minute (60,000ms) has passed since last show
          // Bypass throttle if force is true (e.g. for hard limit hits)
          if (!force && (now - lastPremiumShowTime < 60000)) return;

          const modal = document.getElementById('premiumTierModal');
          if (modal) {
              // Dismiss keyboard on mobile before showing modal
              if (document.activeElement && document.activeElement.blur) document.activeElement.blur();
              // On mobile, nudge scroll down 1px to collapse browser toolbar if visible
              if (window.innerWidth < 768 && document.documentElement.scrollHeight > window.innerHeight) {
                  window.scrollBy(0, 1);
              }
              modal.classList.remove('hidden');
              modal.classList.add('flex');
              // Prevent background scrolling without triggering browser toolbar changes
              document.body.classList.add('overflow-hidden', 'touch-none');
              document.documentElement.classList.add('overflow-hidden');
              // Block touchmove on background (most reliable mobile scroll lock)
              window._premiumPreventScroll = (e) => {
                  if (!e.target.closest('#premiumScrollContainer')) e.preventDefault();
              };
              document.addEventListener('touchmove', window._premiumPreventScroll, { passive: false });
              lastPremiumShowTime = now;

              // Mobile Auto-Scroll
              if (window.innerWidth < 768) {
                  const scrollContainer = document.getElementById('premiumScrollContainer');
                  if (scrollContainer) {
                      scrollContainer.scrollTop = 0; // Reset
                      
                      setTimeout(() => {
                          let animationId;
                          let startTimestamp = null;
                          const pixelsPerSecond = 50; // Constant speed ~50px/sec
                          
                          const scrollStep = (timestamp) => {
                              if (!startTimestamp) startTimestamp = timestamp;
                              const elapsed = timestamp - startTimestamp;
                              const currentScrollPos = (elapsed / 1000) * pixelsPerSecond;
                              
                              const maxScroll = scrollContainer.scrollHeight - scrollContainer.clientHeight;
                              
                              if (currentScrollPos < maxScroll) {
                                  scrollContainer.scrollTop = currentScrollPos;
                                  animationId = requestAnimationFrame(scrollStep);
                              }
                          };
                          
                          const stopAutoScroll = () => {
                              if (animationId) cancelAnimationFrame(animationId);
                              scrollContainer.removeEventListener('touchstart', stopAutoScroll);
                              scrollContainer.removeEventListener('wheel', stopAutoScroll);
                          };
                          
                          scrollContainer.addEventListener('touchstart', stopAutoScroll, { passive: true });
                          scrollContainer.addEventListener('wheel', stopAutoScroll, { passive: true });
                          
                          animationId = requestAnimationFrame(scrollStep);
                      }, 500);
                  }
              }
          }
      };

      window.closePremiumModal = () => {
          const modal = document.getElementById('premiumTierModal');
          if (modal) {
              modal.classList.add('hidden');
              modal.classList.remove('flex');
              // Restore background scrolling
              document.body.classList.remove('overflow-hidden', 'touch-none');
              document.documentElement.classList.remove('overflow-hidden');
              if (window._premiumPreventScroll) {
                  document.removeEventListener('touchmove', window._premiumPreventScroll);
                  window._premiumPreventScroll = null;
              }

              if (window.voiceLimitTriggered) {
                  window.voiceLimitTriggered = false;
                  // Auto-submit refinement if visible
                  const refContent = document.getElementById('refinementContent');
                  if (refContent && !refContent.classList.contains('hidden')) {
                      const btn = document.getElementById('refinementSendBtn');
                      if (btn) btn.click();
                  }
                  // Auto-submit clarification if visible
                  const clarContent = document.getElementById('clarificationsContent');
                  if (clarContent && !clarContent.classList.contains('hidden')) {
                      const btn = document.getElementById('clarificationSendBtn');
                      if (btn) btn.click();
                  }
              }
          }
      };

      window.trackEvent = async (eventName, userId = null, sessionId = null, targetId = null) => {
          try {
              const response = await fetch('/track', {
                  method: 'POST',
                  headers: { 
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
                  },
                  body: JSON.stringify({
                      event_name: eventName,
                      user_id: userId,
                      session_id: sessionId || sessionStorage.getItem('tracking_session_id') || ('sess_' + Math.random().toString(36).substr(2, 9)),
                      target_id: targetId
                  })
              });

              if (response.status === 429) {
                  // Ignore limit modal on history page for downloads/exports as per user request
                  if (!(eventName === 'invoice_exported' && window.location.pathname.includes('/history'))) {
                      if (eventName === 'recording_started') {
                          if (window.showError) {
                              window.showError(window.APP_LANGUAGES.rate_limit_slow_down || "Slow down! You are recording too fast.");
                          } else {
                              alert("Slow down! You are recording too fast.");
                          }
                      } else {
                          window.showPremiumModal(true);
                      }
                  }
                  return false;
              }

              const data = await response.json();
              if (data.status === 'error' && data.message === 'Rate limit reached') {
                  if (!(eventName === 'invoice_exported' && window.location.pathname.includes('/history'))) {
                      if (eventName === 'recording_started') {
                          if (window.showError) {
                              window.showError(window.APP_LANGUAGES.rate_limit_slow_down || "Slow down! You are recording too fast.");
                          } else {
                              alert("Slow down! You are recording too fast.");
                          }
                      } else {
                          window.showPremiumModal(true);
                      }
                  }
                  return false;
              }
              return response.ok;
          } catch (e) {
              console.error('Tracking failed:', e);
              return true;
          }
      };
    </script>

