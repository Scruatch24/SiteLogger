        svg.setAttribute('width', '15');
        svg.setAttribute('height', '15');
        svg.setAttribute('viewBox', '0 0 20 20');
        svg.setAttribute('fill', s.accent);
        svg.style.cssText = 'flex-shrink:0;';
        var path = document.createElementNS('http://www.w3.org/2000/svg', 'path');
        path.setAttribute('fill-rule', 'evenodd');
        path.setAttribute('clip-rule', 'evenodd');
        path.setAttribute('d', s.iconPath);
        svg.appendChild(path);

        var span = document.createElement('span');
        span.style.cssText = 'white-space:normal;word-break:break-word;line-height:1.3;';
        span.textContent = msg;

        var btn = document.createElement('button');
        btn.style.cssText = 'flex-shrink:0;width:18px;height:18px;padding:0;border:none;background:rgba(0,0,0,0.08);color:#000;cursor:pointer;border-radius:5px;display:flex;align-items:center;justify-content:center;transition:background 0.15s;';
        btn.onmouseenter = function() { btn.style.background = 'rgba(0,0,0,0.18)'; };
        btn.onmouseleave = function() { btn.style.background = 'rgba(0,0,0,0.08)'; };
        var xSvg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
        xSvg.setAttribute('width', '10');
        xSvg.setAttribute('height', '10');
        xSvg.setAttribute('viewBox', '0 0 24 24');
        xSvg.setAttribute('fill', 'none');
        xSvg.setAttribute('stroke', 'currentColor');
        xSvg.setAttribute('stroke-width', '3.5');
        xSvg.setAttribute('stroke-linecap', 'round');
        var xPath = document.createElementNS('http://www.w3.org/2000/svg', 'path');
        xPath.setAttribute('d', 'M18 6L6 18M6 6l12 12');
        xSvg.appendChild(xPath);
        btn.appendChild(xSvg);
        btn.onclick = function() { dismissToast(el); };

        inner.appendChild(svg);
        inner.appendChild(span);
        inner.appendChild(btn);
        el.appendChild(inner);
        document.body.appendChild(el);

        activeToasts.push(el);

        requestAnimationFrame(function() {
          repositionToasts();
          requestAnimationFrame(function() {
            el.style.opacity = '1';
          });
        });

        var timer = setTimeout(function() { dismissToast(el); }, duration);
        el._timer = timer;
      };

      function dismissToast(el) {
        if (!el || !el.parentNode) return;
        if (el._dismissed) return;
        el._dismissed = true;
        if (el._timer) clearTimeout(el._timer);
        el.style.opacity = '0';
        var idx = activeToasts.indexOf(el);
        if (idx > -1) activeToasts.splice(idx, 1);
        repositionToasts();
        setTimeout(function() { if (el.parentNode) el.parentNode.removeChild(el); }, 300);
      }

      window.showError = function(msg) {
        if (msg && (msg.toLowerCase().includes("limit reached") || msg.toLowerCase().includes("rate limit"))) {
          if (window.showPremiumModal) { window.showPremiumModal(); return; }
        }
        window.showToast(msg, 'error');
      };

      window.showSoftMessage = function(msg) {
        window.showToast(msg, 'info');
      };

      window.showSuccess = function(msg) {
        window.showToast(msg, 'success');
      };
    })();
    </script>

    <% flash.each do |type, message| %>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        window.showToast(<%= message.to_json.html_safe %>, '<%= type == "alert" ? "error" : "success" %>');
      });
    </script>
    <% end %>
  </body>
</html>