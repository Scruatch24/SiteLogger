<div class="min-h-screen bg-white flex items-center justify-center p-4">
  <div class="w-full max-w-sm">
    <div class="bg-white border-4 border-black rounded-3xl p-8 shadow-[12px_12px_0px_0px_rgba(0,0,0,1)] flex flex-col items-center">
      
      <%# App Branding %>
      <div class="flex items-center gap-3 mb-10 select-none">
        <div class="flex items-center justify-center w-12 h-12 bg-orange-600 border-2 border-black shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] rounded-xl shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 7h6" />
          </svg>
        </div>
        <h1 class="text-2xl font-black tracking-tighter text-black uppercase leading-none">
          TALK<span class="text-orange-600">INVOICE</span>
        </h1>
      </div>

      <div class="w-full space-y-6">
        <div class="text-center">
          <h2 class="text-xl font-black uppercase tracking-tighter mb-1 select-none"><%= t('welcome_back') %></h2>
          <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest"><%= t('sign_in_prompt') %></p>
        </div>

        <%# Form %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          <div class="space-y-2">
            <%= f.label :email, t('email'), class: "text-[10px] font-black text-black uppercase tracking-widest ml-1" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('email_placeholder'), class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black focus:border-orange-500 focus:shadow-[5px_5px_0px_0px_#F97316] focus:-translate-y-0.5 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all" %>
          </div>

          <div class="space-y-2">
             <div class="flex justify-between items-center ml-1">
               <%= f.label :password, t('password'), class: "text-[10px] font-black text-black uppercase tracking-widest" %>
               <%= link_to t('forgot_password'), new_password_path(resource_name), class: "text-[9px] font-black text-orange-600 uppercase tracking-widest hover:underline" %>
             </div>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black focus:border-orange-500 focus:shadow-[5px_5px_0px_0px_#F97316] focus:-translate-y-0.5 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center gap-2 ml-1">
              <%= f.check_box :remember_me, class: "w-4 h-4 border-2 border-black rounded text-orange-600 focus:ring-orange-500 accent-orange-600" %>
              <%= f.label :remember_me, t('remember_me'), class: "text-[10px] font-black text-gray-400 uppercase tracking-widest" %>
            </div>
          <% end %>

          <div class="pt-2">
            <%= f.submit t('log_in'), class: "w-full py-4 bg-orange-600 text-white border-2 border-black rounded-2xl font-black uppercase text-xs tracking-[0.2em] shadow-[4px_4px_0px_0px_#000000] active:scale-[0.97] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all cursor-pointer" %>
          </div>
        <% end %>

        <%# Divider %>
        <div class="relative py-2">
          <div class="absolute inset-0 flex items-center"><div class="w-full border-t-2 border-gray-100"></div></div>
          <div class="relative flex justify-center text-[10px] font-black uppercase"><span class="bg-white px-4 text-gray-400 tracking-widest"><%= t('or_continue_with') %></span></div>
        </div>

        <%# OAuth Buttons %>
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full py-4 bg-white text-black border-2 border-black rounded-2xl font-black uppercase text-xs tracking-[0.2em] shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:bg-gray-50 active:scale-[0.97] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all flex items-center justify-center gap-3 group" do %>
               <% if provider == :google_oauth2 %>
                 <div class="relative w-5 h-5 flex items-center justify-center overflow-hidden rounded-full">
                   <svg viewBox="0 0 24 24" class="w-full h-full">
                     <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                     <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                     <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l3.66-2.84z" fill="#FBBC05"/>
                     <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                   </svg>
                 </div>
               <% end %>
               <span class="group-hover:text-orange-600 transition-colors">Google</span>
            <% end %>
          <% end %>
        <% end %>

        <div class="text-center pt-2">
           <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">
             <%= t('dont_have_account') %> 
             <%= link_to t('sign_up'), new_registration_path(resource_name), class: "text-orange-600 hover:underline" %>
           </p>
        </div>
      </div>
    </div>
    
    <div class="text-center mt-8">
      <%= link_to t('back_to_home'), root_path, class: "text-[10px] font-black text-gray-400 uppercase tracking-[0.2em] hover:text-black transition-colors" %>
    </div>
  </div>
</div>
