<div class="min-h-screen bg-white flex items-center justify-center p-4">
  <div class="w-full max-w-sm">
    <div class="bg-white border-4 border-black rounded-3xl p-8 shadow-[12px_12px_0px_0px_rgba(0,0,0,1)] flex flex-col items-center">
      
      <%# App Branding %>
      <div class="flex items-center gap-3 mb-10 select-none">
        <div class="flex items-center justify-center w-12 h-12 bg-orange-600 border-2 border-black shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] rounded-xl shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 7h6" />
          </svg>
        </div>
        <h1 class="text-2xl font-black tracking-tighter text-black uppercase italic leading-none">
          TALK<span class="text-orange-600">INVOICE</span>
        </h1>
      </div>

      <div class="w-full space-y-6">
        <div class="text-center">
          <h2 class="text-xl font-black uppercase italic tracking-tighter mb-1 select-none">Set New Password</h2>
          <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Secure your account access</p>
        </div>

        <%# Form %>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="space-y-2">
            <div class="flex justify-between items-center ml-1">
               <%= f.label :password, "New Password", class: "text-[10px] font-black text-black uppercase tracking-widest" %>
               <% if @minimum_password_length %>
                 <span class="text-[8px] font-black text-gray-400 uppercase tracking-widest"><%= @minimum_password_length %> chars min</span>
               <% end %>
            </div>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "••••••••", class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black focus:border-orange-500 focus:shadow-[5px_5px_0px_0px_#F97316] focus:-translate-y-0.5 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all" %>
          </div>

          <div class="space-y-2">
            <%= f.label :password_confirmation, "Confirm Password", class: "text-[10px] font-black text-black uppercase tracking-widest ml-1" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "w-full bg-white border-2 border-black rounded-xl py-4 px-4 text-sm font-bold text-black focus:border-orange-500 focus:shadow-[5px_5px_0px_0px_#F97316] focus:-translate-y-0.5 outline-none shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] transition-all" %>
          </div>

          <div class="pt-2">
            <%= f.submit "Update Password", class: "w-full py-4 bg-orange-600 text-white border-2 border-black rounded-2xl font-black uppercase text-xs tracking-[0.2em] shadow-[4px_4px_0px_0px_#000000] active:scale-[0.97] active:shadow-none active:translate-x-[2px] active:translate-y-[2px] transition-all cursor-pointer" %>
          </div>
        <% end %>

        <div class="text-center pt-2">
           <%= link_to "Log In", new_session_path(resource_name), class: "text-[10px] font-black text-orange-600 uppercase tracking-widest hover:underline" %>
        </div>
      </div>
    </div>
  </div>
</div>
